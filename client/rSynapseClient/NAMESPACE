## imports from other packages
import(RCurl, Biobase, methods, affy)
importFrom(RJSONIO, toJSON, fromJSON, emptyNamedList)
importFrom(tools, md5sum)
importFrom(digest, digest, hmac)
importFrom(utils, edit)

## package has a dynamic library
useDynLib(synapseClient)

export(onWeb, attach, detach)

## S3 utility methods
export(
	synapseResetEndpoints, 
	synapseAuthServiceEndpoint, 
	synapseRepoServiceEndpoint,
	synapsePortalEndpoint,
	synapseLogin, 
	synapseLogout, 
	synapseQuery, 
	synapseCacheDir,
	hmacSecretKey
)

## S3 convenience methods
export(getDatasets)

## S4 convenience methods
exportMethods(getDatasetLayers)

## S4 entity constructors
exportMethods(
	Dataset, 
	Layer, 
	Project,
	Code,
	Media
)

## entity S4 methods
exportMethods(
	storeEntityFiles,
	storeEntityObjects,
	storeEntity,
	copyEntity, 
	getEntity, 
	deleteEntity, 
	createEntity, 
	updateEntity, 
	refreshEntity, 
	downloadEntity, 
	loadEntity, 
	getParentEntity
)

## methods for managing layer files
exportMethods(
	addFile,
	addDir,
	deleteFile,
	moveFile,
	edit
) 

exportMethods(
	addObject,
	deleteObject,
	getObject,
	renameObject
)

## entity property/annotation setters and getters
exportMethods(
	"annotValue<-",
 	annotValue, 
 	annotations, 
 	"annotationValues<-", 
 	annotationValues
 )
 	
exportMethods(
	deleteProperty, 
	deleteAnnotation, 
 	propertyValue, 
 	"propertyValue<-", 
 	"propertyValues<-", 
 	propertyValues, 
 	properties
)

