## imports from other packages
import(RCurl, Biobase, methods)
importFrom(RJSONIO, toJSON, fromJSON, emptyNamedList)
importFrom(tools, md5sum)

## package has a dynamic library
useDynLib(synapseClient)

## S3 utility methods
export(
	synapseResetEndpoints, 
	synapseAuthServiceEndpoint, 
	synapseRepoServiceEndpoint, 
	synapseLogin, 
	synapseLogout, 
	synapseQuery, 
	synapseCacheDir
)

## S3 convenience methods
export(getDatasets)

## S4 convenience methods
exportMethods(getDatasetLayers)

## S4 entity constructors
exportMethods(
	Dataset, 
	Layer, 
	Project
)

## entity S4 methods
exportMethods(
	storeEntityFiles, 
	copyEntity, 
	getEntity, 
	deleteEntity, 
	createEntity, 
	updateEntity, 
	refreshEntity, 
	downloadEntity, 
	loadEntity, 
	getParentEntity
)

## methods for managing layer files
exportMethods(
	addFile,
	deleteFile,
	moveFile
) 

exportMethods(
	addObject,
	deleteObject,
	getObject,
	renameObject
)

## entity property/annotation setters and getters
exportMethods(
	"annotValue<-",
 	annotValue, 
 	annotations, 
 	"annotationValues<-", 
 	annotationValues
 )
 	
exportMethods(
	deleteProperty, 
	deleteAnnotation, 
 	propertyValue, 
 	"propertyValue<-", 
 	"propertyValues<-", 
 	propertyValues, 
 	properties
)

