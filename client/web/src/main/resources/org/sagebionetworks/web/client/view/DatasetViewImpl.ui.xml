<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
	<ui:style>
		.title {
			font-size: 2em;
			font-weight: bold;
			color: #777777;
			margin: 10px 20px 10px;
			text-align: left;
		}
		
		.topTable {
			padding: 10px;
			cellspacing: 50px;
		}
		
		.oneThird {
			width: 350px;
		}
		
		.rowTop {
			vertical-align: top;
		}
	</ui:style>
	
	<ui:with field='icons' type='org.sagebionetworks.web.client.IconsImageBundle'/>
	 
	<g:HTMLPanel>

	<!-- start header -->
		<div id="container" class="clearfix">		
			<g:SimplePanel ui:field="header" />
			<div id="main" role="main">
	<!-- end header -->

			<div id="content" class="clearfix">

				<ul class="breadcrumbs">
					<li class="breadcrumb"><a href="#">Home</a> > <a href="#DatasetsHome:0">All Datasets</a> > <span ui:field="breadcrumbTitleSpan" /></li>
				</ul>
				<h2><span ui:field="titleSpan" /></h2>
				<div id="privacy_setting" class="right">
					<table>
						<tr valign="bottom">
							<td style="padding-right: 10px">
								<g:SimplePanel ui:field="adminPanel" />
							</td>
							<td>
								<g:SimplePanel ui:field="accessPanel" />								
								<span ui:field="accessSpan" />
							</td>
						</tr>
					</table>					
				</div>
				<div class="data_info">
					<span class="info_head">
						<h2>Overview</h2>

						<span class="data_options">
							<g:SimplePanel ui:field="followDatasetPanel" />
							<g:SimplePanel ui:field="seeTermsPanel" /> <!-- <g:Image resource='{icons.documentText16}'/> See Terms of Use -->
						</span>
					</span>
					<span class="info_text_narrow">
						<g:FlowPanel ui:field="overviewPanel" />
						<br /><br />
					</span>
					<span class="data_details">
						<g:FlexTable ui:field="middleFlexTable" />
					</span>
					<span class="data_details data_details_right">
						<g:FlexTable ui:field="rightFlexTable" />
					</span>
				</div>
			</div>
			<div class="data_detail_sections">
				<div class="data_detail_section">
					<span class="header">
						<span class="icon right">
							<g:SimplePanel ui:field="downloadPanel" />						
						</span>
						<span class="title">Dataset Layers</span>
						<span class="secondary_text">Select a name to view sample data</span>
					</span>
					<g:SimplePanel ui:field="tablePanel" />												
				</div>				
				
				<div class="data_detail_section">
					<span class="header">
						<span class="icon right">
							<g:Image resource='{icons.applicationResize16}'/> View All<br/>
							<g:Image resource='{icons.notePlus16}'/> Add a note
						</span>

						<span class="title">Conversations and<br/>Events for this Dataset</span>
					</span>
					<div class="scrollable longer">
						<g:SimplePanel ui:field="demoComments" />
					</div>
				</div>
				
				<div class="data_detail_section last">
					<span class="header">
						<span class="icon right">
							<g:Image resource='{icons.applicationResize16}'/> View All<br/>
							<g:Image resource='{icons.hand16}'/> Suggest an analysis
						</span>

						<span class="title">Analyses using<br /> this Dataset</span>
					</span>
					<table width="100%" class="head_table">
						<tr>
							<th class="analysis">Analysis</th>
							<th class="project">Project</th>

							<th class="last_modified">Last Modified</th>
						</tr>
					</table>
					<div class="scrollable">
						<g:SimplePanel ui:field="demoAnalysis" />
					</div>
				</div>
								
			</div>	

<!-- start footer -->
				<g:SimplePanel ui:field="footer" />
			</div> <!-- id: main -->				
		</div> <!-- id: container -->
<!-- end footer -->

	</g:HTMLPanel>
</ui:UiBinder>