<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view">
		
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.rowTop {
			vertical-align: top;
		}
	</ui:style>
	
	<ui:with field='icons' type='org.sagebionetworks.web.client.IconsImageBundle'/>	
		
	<g:HTMLPanel>

	<!-- MAIN CONTAINER -->
		<!-- HEADER -->
        <div class="color-line"></div>
        <div class="clear"></div>
    	<div class="container"> 		
			<g:SimplePanel ui:field="header" />
	        	<div class="span-24 notopmargin">
	        	
					<ul class="breadcrumbs">
						<li class="breadcrumb"><a href="#">Home</a> > <a href="#AnalysisHome:0">All Analysis</a> > <span ui:field="breadcrumbTitleSpan" /></li>
					</ul>				
				<div id="privacy_setting" class="right">
					<table>
						<tr valign="bottom">
							<td style="padding-right: 10px">
								<g:SimplePanel ui:field="adminPanel" />
							</td>
							<td>
								<g:SimplePanel ui:field="accessPanel" />								
								<span ui:field="accessSpan" />
							</td>
						</tr>
					</table>					
				</div>
				<div class="data_info">
					<span class="info_head">
						<h2>
							<span ui:field="titleSpan" /><br/>
							<span ui:field="synapseIdSpan" style="font-size: 60%"/>
						</h2>

						<span class="data_options">
							<g:SimplePanel ui:field="followStepButtonPanel" />
							<g:SimplePanel ui:field="seeTermsButtonPanel" /> 
						</span>
					</span>
					<span class="info_text">
						<g:FlowPanel ui:field="overviewPanel" />
						<br /><br />
						<div ui:field="rClientCodeDiv"/>
					</span>
					<span style="float:right;">
						<g:SimplePanel ui:field="annotationsPanel" />
					</span>
				</div>
				<div class="data_info step_details">
					<span class="data_details">
					   <span class="title">Step Properties</span>
  						<br /><br />
                       <g:FlexTable ui:field="propertiesFlexTable" />
					</span>
					<span class="data_details data_details_right" style="float:right;">
 					   <span class="title">Step Environment Descriptors</span>
						<br /><br />
						<g:FlexTable ui:field="environmentDescriptorsFlexTable" />
					</span>
				</div>
			</div>
			<div class="data_detail_sections">
				<div class="step_details data_detail_section">
					<span class="header">
						<span class="icon right">
							<g:SimplePanel ui:field="addReferencePanel" />						
						</span>
						<span class="title">Step References</span>
						<span class="secondary_text">Select a reference to view its details</span>
					</span>
					<div class="scrollable">
                    	<g:FlexTable ui:field="referencesFlexTable" />
                    </div>												
				</div>

				<div class="data_detail_section">
					<span class="header">
						<span class="icon right">
							<g:Image resource='{icons.applicationResize16}'/> View All<br/>
							<g:Image resource='{icons.notePlus16}'/> Add a note
						</span>

						<span class="title">Conversations and<br/>Events for this Step</span>
					</span>
					<div class="scrollable longer">
					</div>
				</div>

				<div class="step_details data_detail_section last">
					<span class="header">
						<span class="icon right">
							<g:Image resource='{icons.applicationResize16}'/> View All<br/>
							<g:Image resource='{icons.documentAdd16}'/> Add an Event
						</span>

						<span class="title">Step History</span>
					</span>
					<div class="scrollable">
						<g:FlexTable ui:field="commandHistoryFlexTable" />
					</div>
				</div>

 				
			</div>
					
            <div class="clear"></div>
        </div> <!-- close class="container" -->
		<g:SimplePanel ui:field="footer" />

	</g:HTMLPanel>
</ui:UiBinder> 