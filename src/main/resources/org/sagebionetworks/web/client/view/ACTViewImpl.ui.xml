<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<bh:Div>
		<g:SimplePanel ui:field="header" />
		<b:Heading ui:field="title" size="H2" text="Access and Compliance Team" addStyleNames="margin-top-30 margin-left-35 margin-right-10" />
		<bh:Div ui:field="synAlertContainer" />
		<bh:Div addStyleNames="margin-top-30 margin-left-35 min-height-400 margin-right-10 light-border">
				<b:Heading size="H3" text="Profile Validation Submissions" addStyleNames="margin-left-10 margin-right-10 margin-bottom-20" />
				<b:Row>
					<b:Column size="SM_6">
						<b:Panel addStyleNames="margin-left-10 margin-right-10 margin-bottom-20">
							<b:PanelHeader>
								<b:Heading size="H3" text="State Filter" />
								<bh:Span ui:field="currentState"/>
								<b:Button ui:field="clearStateFilter" type="DANGER" pull="RIGHT" addStyleNames="moveup-18" size="EXTRA_SMALL">Clear</b:Button>
							</b:PanelHeader>
							<b:PanelBody>
								<b:ButtonGroup>
									<b:Button dataToggle="DROPDOWN" text="Filter by submission state..."/>
									<b:DropDownMenu ui:field="stateDropdownMenu" />
								</b:ButtonGroup>
							</b:PanelBody>
						</b:Panel>
					</b:Column>
					<b:Column size="SM_6">
						<b:Panel addStyleNames="margin-left-10 margin-right-10 margin-bottom-20">
							<b:PanelHeader>
								<b:Heading size="H3" text="User Filter" />
								<bh:Div ui:field="currentUserContainer" />
								<b:Button ui:field="clearUserFilter" type="DANGER" pull="RIGHT" addStyleNames="moveup-18" size="EXTRA_SMALL">Clear</b:Button>
							</b:PanelHeader>
							<b:PanelBody>
								<bh:Div ui:field="userSelectContainer" />
							</b:PanelBody>
						</b:Panel>
					</b:Column>
				</b:Row>
				<!-- table header -->
				<t:Table width="100%" addStyleNames="margin-left-10 margin-right-10 table-layout-fixed">
					<t:TableRow>
						<t:TableHeader width="6%" addStyleNames="hidden-xs">
							<bh:Span text="State" />
						</t:TableHeader>
						<t:TableHeader width="7%">
							<bh:Span text="User ID" />
						</t:TableHeader>
						<t:TableHeader width="7%" addStyleNames="hidden-xs">
							<bh:Span text="First name" />
						</t:TableHeader>
						<t:TableHeader width="10%" addStyleNames="hidden-xs">
							<bh:Span text="Last name" />
						</t:TableHeader>
						<t:TableHeader width="10%" addStyleNames="hidden-xs">
							<bh:Span text="Organization" />
						</t:TableHeader>
						<t:TableHeader width="10%" addStyleNames="hidden-xs">
							<bh:Span text="Location" />
						</t:TableHeader>
						<t:TableHeader width="10%" addStyleNames="hidden-xs">
							<bh:Span text="ORC ID" />
						</t:TableHeader>
						<t:TableHeader width="10%">
							<bh:Span text="Email(s)" />
						</t:TableHeader>
						<t:TableHeader width="10%">
							<bh:Span text="Evidence" />
						</t:TableHeader>
						<t:TableHeader width="10%">
							<bh:Span text="Reason" />
						</t:TableHeader>
						<t:TableHeader width="10%">
							<bh:Span text="Actions" />
						</t:TableHeader>
					</t:TableRow>
				</t:Table>
				<bh:Div ui:field="tableData" addStyleNames="margin-bottom-20" />
				<bh:Div ui:field="paginationContainer" addStyleNames="margin-left-10 margin-right-10" />
		</bh:Div>
		<bh:Div addStyleNames="clear" />
		<g:SimplePanel ui:field="footer" />
	</bh:Div>
</ui:UiBinder> 