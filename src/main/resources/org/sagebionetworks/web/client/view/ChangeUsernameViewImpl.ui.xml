<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
  <g:HTMLPanel>
    <div class="row margin-top-left-10 margin-right-15 margin-bottom-20">
      <div class="row">
        <div class="well col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
          <h2>Set Username</h2>
          <div class="signin-panel panel panel-body margin-top-15">
            <h4>
              Synapse now requires a username. Please take a moment to
							carefully choose yours.
            </h4>
            <g:TextBox ui:field="username" addStyleNames="form-control" />
            <g:Button
              ui:field="changeUsernameButton"
              styleName="right btn btn-primary btn-lg margin-top-10"
            />

            <g:SimplePanel
              ui:field="errorContainer"
              addStyleNames="left margin-top-10"
              width="100%"
            />
          </div>
        </div>
      </div>

      <div class="clear" />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
