<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<bh:Div>
		<bh:Div
			addStyleNames="margin-top-10 margin-left-15 margin-right-15">
			<b:Row>
				<b:Column size="XS_12">
					<b:Image responsive="true"
						addStyleNames="align-center margin-bottom-40 margin-top-20"
						url="https://s3.amazonaws.com/static.synapse.org/stu/asleep-sm.png" />
				</b:Column>
				<b:Column size="XS_12">
					<b:Heading size="H3" alignment="CENTER"
						text="Synapse is down." />
					<b:Heading ui:field="messageHeading" size="H3"
						alignment="CENTER" />
					<bh:Div ui:field="timerUI" width="100%"
						addStyleNames="text-align-center">
						<bh:Text>Retrying in</bh:Text>
						<bh:Text ui:field="secondsText" />
						<bh:Text>s</bh:Text>
					</bh:Div>
				</b:Column>
			</b:Row>
		</bh:Div>
	</bh:Div>
</ui:UiBinder> 