									<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Share your research"></b:Heading>
									<b:Heading size="H6" text="New Synapse Projects are private by default - share with your colleagues, collaborators, and even make your work public! Create Synapse Teams to manage your collaborations." />
								</t:TableData>
							</t:TableRow>
						</t:Table>
					</b:Panel>
				</b:Column>				
			</b:Row>
		</b:Container>
		
		<g:SimplePanel ui:field="footer" />
