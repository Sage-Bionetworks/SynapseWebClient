<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
 	
 	<ui:with field='icons' type='org.sagebionetworks.web.client.IconsImageBundle'/>
 	<ui:with field='sageImageBundle' type='org.sagebionetworks.web.client.SageImageBundle'/>
 	
	<g:HTMLPanel>
		<!-- HEADER -->
		<g:SimplePanel ui:field="header"/>
		
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="organizeResearchAssetsBox">
						<bh:Div addStyleNames="imageButton margin-left-10 margin-right-10">
							<g:Image resource='{sageImageBundle.directory}' addStyleNames="center-in-div" />
							<b:Heading size="H4" addStyleNames="margin-top-30 font-weight-bolder margin-bottom-10-imp"
								text="Organize your digital research assets"
							></b:Heading>
							<b:Heading size="H5" addStyleNames="margin-top-3"
								text="Create a free Synapse Project to store your research data, code, and results."
							></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="creditForResearchBox">
						<bh:Div addStyleNames="imageButton">
							<g:Image resource='{sageImageBundle.prov}' addStyleNames="center-in-div" />
							<b:Heading size="H4" addStyleNames="margin-top-30 font-weight-bolder margin-bottom-10-imp"
								text="Get credit for your research"
							></b:Heading>
							<b:Heading size="H5" addStyleNames="margin-top-3"
								text="Mint a DOI for your work - and describe exactly what you did using Synapse provenance."
							></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="collaborateBox">
						<bh:Div addStyleNames="imageButton margin-left-10 margin-right-10">
							<g:Image resource='{sageImageBundle.collaborate}' addStyleNames="center-in-div" />
							<b:Heading size="H4" addStyleNames="margin-top-30 font-weight-bolder margin-bottom-10-imp" 
								text="Collaborate"
							></b:Heading>
							<b:Heading size="H5" addStyleNames="margin-top-3"
								text="Share your Project with your collaborators, or make it Public!"
							></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row addStyleNames="margin-top-40">
				<b:Column size="SM_7">
					<bh:Div ui:field="dashboardUI" addStyleNames="synapse-blue-bg padding-30 margin-left-15" visible="false">
						<b:Heading size="H3" addStyleNames="color-white margin-top-5" text="WELCOME BACK"></b:Heading>
						<b:Button ui:field="dashboardBtn" size="LARGE" block="true" marginTop="20" marginBottom="33" />
					</bh:Div>
					<bh:Div ui:field="registerUI"></bh:Div>
					<bh:Div ui:field="loginUI" addStyleNames="synapse-blue-bg padding-30" />
				</b:Column>
				<b:Column size="SM_5">
					<g:SimplePanel ui:field="newsFeed" />
				</b:Column>
			</b:Row>
		</b:Container>
		
		<b:Container fluid="true">
			<b:Row addStyleNames="synapse-blue-bg margin-top-40">
				<b:Column size="SM_12">
					<b:Heading size="H3" addStyleNames="margin-top-5 margin-bottom-5 color-white margin-left-10"
							text="EXPLORE HOW RESEARCHERS ARE USING SYNAPSE"
					></b:Heading>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="researchCommunitiesBox">
						<bh:Div addStyleNames="synapse-yellow-bg padding-10 imageButton margin-left-10 margin-right-10" height="200px">
							<t:Table>
								<t:TableRow>
									<t:TableData paddingRight="2">
										<g:Image resource='{sageImageBundle.people}' addStyleNames="margin-top-left-10" />
									</t:TableData>
									<t:TableData paddingRight="2">
										<b:Heading size="H5" addStyleNames="color-white font-weight-bolder" text="RESEARCH COMMUNITIES"></b:Heading>
									</t:TableData>
								</t:TableRow>
							</t:Table>
							<b:Heading size="H5" addStyleNames="color-white" text="See the communities working on shared data hosted on Synapse. >"></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="openResearchProjectsBox">
						<bh:Div addStyleNames="synapse-green-bg padding-10 imageButton margin-left-10 margin-right-10" height="200px">
							<t:Table>
								<t:TableRow>
									<t:TableData paddingRight="2">
										<g:Image resource='{sageImageBundle.unlock}' addStyleNames="margin-10" />
									</t:TableData>
									<t:TableData paddingRight="2">
										<b:Heading size="H5" addStyleNames="color-white font-weight-bolder" text="OPEN RESEARCH PROJECTS"></b:Heading>
									</t:TableData>
								</t:TableRow>
							</t:Table>
							<b:Heading size="H5" addStyleNames="color-white" text="See the open research projects hosted on Synapse. >"></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="dreamChallengesBox">
						<bh:Div addStyleNames="synapse-purple-bg padding-10 imageButton margin-left-10 margin-right-10" height="200px">
							<bh:Div addStyleNames="margin-10">
								<g:Image resource='{sageImageBundle.dream}' addStyleNames="center-in-div" />
							</bh:Div>
							<b:Heading size="H5" addStyleNames="color-white" text="See all the current DREAM challenges available on Synapse. >"></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row addStyleNames="synapse-purple-bg margin-top-40">
				<b:Column size="SM_12">
					<b:Heading size="H3" addStyleNames="margin-top-5 margin-bottom-5 color-white margin-left-10"
							text="GOVERNANCE"
					></b:Heading>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_6" addStyleNames="margin-top-30">
						<g:FocusPanel ui:field="termsOfUseBox">
							<b:Panel addStyleNames="padding-15 imageButton margin-left-10 margin-right-10">
								<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Terms of Use"></b:Heading>
								<b:Heading size="H6" text="Synapse operates under a complete governance process that includes well-documented Terms and Conditions of Use, guide- lines and operating procedures, privacy enhancing technologies, as well as the right of audit and external reviews." />
								<b:Button text="Learn about Synapse Use and Oversight" />
							</b:Panel>
						</g:FocusPanel>
					</b:Column>
				<b:Column size="SM_6" addStyleNames="margin-top-30">
						<g:FocusPanel ui:field="becomeCertifiedBox">
							<b:Panel addStyleNames="padding-15 imageButton margin-left-10 margin-right-10">
								<t:Table>
									<t:TableRow>
										<t:TableData paddingRight="10">
											<g:Image resource='{sageImageBundle.certificate}' addStyleNames="margin-10" />
										</t:TableData>
										<t:TableData paddingRight="2">
											<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Become a Certified User!"></b:Heading>
											<b:Heading size="H6" text="In partnership with our Ethics Review Board, we've updated our terms of use to ensure that users who create content in the system are informed about appropriate conduct when dealing with possibly sensitive data." />
											<b:Button text="Learn more about certification" />
										</t:TableData>
									</t:TableRow>
								</t:Table>
							</b:Panel>
						</g:FocusPanel>
					</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row addStyleNames="synapse-yellow-bg margin-top-40">
				<b:Column size="SM_12">
					<b:Heading ui:field="organizeDigitalResearchAssetsHeading" size="H3" addStyleNames="margin-top-5 margin-bottom-5 color-white margin-left-10"
							text="ORGANIZE YOUR DIGITAL RESEARCH ASSETS"
					></b:Heading>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_6" addStyleNames="margin-top-30">
					<b:Panel addStyleNames="padding-15 margin-left-10 margin-right-10">
						<t:Table>
							<t:TableRow>
								<t:TableData paddingRight="10">
									<g:Image resource='{sageImageBundle.directory}' addStyleNames="margin-10" height="63px" width="75px"/>
								</t:TableData>
								<t:TableData paddingRight="2">
									<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Store and access files"></b:Heading>
									<b:Heading size="H6" text="Synapse provides APIs and clients to store and access files using a unique Synapse ID through the web, R, python, and the command line." />
								</t:TableData>
							</t:TableRow>
						</t:Table>
					</b:Panel>
				</b:Column>
				<b:Column size="SM_6" addStyleNames="margin-top-30">
					<b:Panel addStyleNames="padding-15 margin-left-10 margin-right-10">
						<t:Table>
							<t:TableRow>
								<t:TableData paddingRight="10">
									<g:Image resource='{sageImageBundle.directory}' addStyleNames="margin-10" height="63px" width="75px"/>
								</t:TableData>
								<t:TableData paddingRight="2">
									<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Query structured data"></b:Heading>
									<b:Heading size="H6" text="Use Synapse Tables to query structured data right from your web browser, or from any analytical client!" />
								</t:TableData>
							</t:TableRow>
						</t:Table>
					</b:Panel>
				</b:Column>
			</b:Row>
		</b:Container>
		
		<b:Container fluid="true">
			<b:Row addStyleNames="synapse-green-bg margin-top-40">
				<b:Column size="SM_12">
					<b:Heading ui:field="getCreditHeading" size="H3" addStyleNames="margin-top-5 margin-bottom-5 color-white margin-left-10"
							text="GET CREDIT FOR YOUR RESEARCH"
					></b:Heading>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_6" addStyleNames="margin-top-30">
					<b:Panel addStyleNames="padding-15 margin-left-10 margin-right-10">
						<t:Table>
							<t:TableRow>
								<t:TableData paddingRight="10">
									<g:Image resource='{sageImageBundle.prov}' addStyleNames="margin-10" height="74px" width="75px"/>
								</t:TableData>
								<t:TableData paddingRight="2">
									<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Mint a doi"></b:Heading>
									<b:Heading size="H6" text="A digital object identifier (DOI) provides provides a persistent and easy way to reference your digital assets in publications - including data, code, or analysis results." />
								</t:TableData>
							</t:TableRow>
						</t:Table>
					</b:Panel>
				</b:Column>
				<b:Column size="SM_6" addStyleNames="margin-top-30">
					<b:Panel addStyleNames="padding-15 margin-left-10 margin-right-10">
						<t:Table>
							<t:TableRow>
								<t:TableData paddingRight="10">
									<g:Image resource='{sageImageBundle.prov}' addStyleNames="margin-10" height="74px" width="75px"/>
								</t:TableData>
								<t:TableData paddingRight="2">
									<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Record provenance"></b:Heading>
									<b:Heading size="H6" text="Synapse provides tools to record and display provenance of your analysis - giving you credit for each step of the work you do!" />
								</t:TableData>
							</t:TableRow>
						</t:Table>
					</b:Panel>
				</b:Column>
			</b:Row>
		</b:Container>
		
		
		<b:Container fluid="true">
			<b:Row addStyleNames="synapse-purple-bg margin-top-40">
				<b:Column size="SM_12">
					<b:Heading ui:field="collaborateHeading" size="H3" addStyleNames="margin-top-5 margin-bottom-5 color-white margin-left-10"
							text="COLLABORATE"
					></b:Heading>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_6" addStyleNames="margin-top-30">
					<b:Panel addStyleNames="padding-15 margin-left-10 margin-right-10">
						<t:Table>
							<t:TableRow>
								<t:TableData paddingRight="10">
									<g:Image resource='{sageImageBundle.collaborate}' addStyleNames="margin-10" height="60px" width="75px"/>
								</t:TableData>
								<t:TableData paddingRight="2">
									<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Share your research"></b:Heading>
									<b:Heading size="H6" text="New Synapse Projects are private by default - share with your colleagues, collaborators, and even make your work public!" />
								</t:TableData>
							</t:TableRow>
						</t:Table>
					</b:Panel>
				</b:Column>
				<b:Column size="SM_6" addStyleNames="margin-top-30">
					<b:Panel addStyleNames="padding-15 margin-left-10 margin-right-10">
						<t:Table>
							<t:TableRow>
								<t:TableData paddingRight="10">
									<g:Image resource='{sageImageBundle.collaborate}' addStyleNames="margin-10" height="60px" width="75px"/>
								</t:TableData>
								<t:TableData paddingRight="2">
									<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Create or join a team"></b:Heading>
									<b:Heading size="H6" text="Manage your Synapse Teams from your profile page - organize groups of people who are collaborating with you." />
								</t:TableData>
							</t:TableRow>
						</t:Table>
					</b:Panel>
				</b:Column>
			</b:Row>
		</b:Container>
		
		<g:SimplePanel ui:field="footer" />
	</g:HTMLPanel>
</ui:UiBinder> 