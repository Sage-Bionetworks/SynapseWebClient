 	<ui:with field='icons' type='org.sagebionetworks.web.client.IconsImageBundle'/>
 	<ui:with field='sageImageBundle' type='org.sagebionetworks.web.client.SageImageBundle'/>
 	
	<g:HTMLPanel>
		<!-- HEADER -->
		<g:SimplePanel ui:field="header"/>
		
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="organizeResearchAssetsBox">
						<bh:Div addStyleNames="imageButton margin-left-10 margin-right-10">
							<g:Image resource='{sageImageBundle.directory}' addStyleNames="center-in-div" />
							<b:Heading size="H4" addStyleNames="margin-top-30 font-weight-bolder margin-bottom-10-imp"
								text="Organize your digital research assets"
							></b:Heading>
							<b:Heading size="H5" addStyleNames="margin-top-3"
								text="Create a free Synapse Project to store your research data, code, and results."
							></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="creditForResearchBox">
						<bh:Div addStyleNames="imageButton">
							<g:Image resource='{sageImageBundle.prov}' addStyleNames="center-in-div" />
							<b:Heading size="H4" addStyleNames="margin-top-30 font-weight-bolder margin-bottom-10-imp"
								text="Get credit for your research"
							></b:Heading>
							<b:Heading size="H5" addStyleNames="margin-top-3"
								text="Mint a DOI for your work - and describe exactly what you did using Synapse provenance."
							></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="collaborateBox">
						<bh:Div addStyleNames="imageButton margin-left-10 margin-right-10">
							<g:Image resource='{sageImageBundle.collaborate}' addStyleNames="center-in-div" />
							<b:Heading size="H4" addStyleNames="margin-top-30 font-weight-bolder margin-bottom-10-imp" 
								text="Collaborate"
							></b:Heading>
							<b:Heading size="H5" addStyleNames="margin-top-3"
								text="Share your Project with your collaborators, or make it Public!"
							></b:Heading>
						</bh:Div>
					</g:FocusPanel>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row addStyleNames="margin-top-20">
				<b:Column size="SM_7">
					<bh:Div ui:field="dashboardUI" addStyleNames="synapse-blue-bg padding-30 margin-left-15 margin-bottom-15" visible="false">
						<bh:Div>
							<b:Heading size="H3" addStyleNames="color-white margin-top-5 displayInline margin-right-5" text="WELCOME BACK,"></b:Heading>
							<b:Heading ui:field="userDisplayName" size="H3" addStyleNames="color-white margin-top-5 displayInline" text=""></b:Heading>
						</bh:Div>
						<b:Button ui:field="dashboardBtn" size="LARGE" block="true" marginTop="20" marginBottom="33" />
					</bh:Div>
					<bh:Div ui:field="registerUI" addStyleNames="margin-bottom-15"></bh:Div>
					<bh:Div ui:field="loginUI" addStyleNames="synapse-blue-bg padding-30 margin-bottom-15" />
				</b:Column>
				<b:Column size="SM_5">
					<g:SimplePanel ui:field="newsFeed" />
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row addStyleNames="synapse-blue-bg margin-top-20">
				<b:Column size="SM_12">
					<b:Heading size="H3" addStyleNames="margin-top-5 margin-bottom-5 color-white margin-left-10"
							text="HELP"
					></b:Heading>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_3" addStyleNames="margin-top-30">
					<g:FocusPanel ui:field="gettingStartedBox">
						<b:Panel addStyleNames="padding-15 imageButton margin-left-10 margin-right-10">
							<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Synapse Tutorial" />
							<b:Heading size="H6" text="Synapse is an open source software platform that data scientists can use to carry out, track, and communicate their research in real time. " />
							<b:Heading size="H6" text="This tutorial steps you through how to create your first Project, store your research data, share with your collaborators, and more!" />
							<b:Button text="Open the tutorial" />
						</b:Panel>
					</g:FocusPanel>
				</b:Column>
				<b:Column size="SM_9" addStyleNames="margin-top-30">
					<b:Panel addStyleNames="padding-15 margin-left-10 margin-right-10">
						<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Programmatic Clients" />
						<b:Heading size="H6" text="Synapse is designed to easily integrate into your current work. That's why we've created the following clients so that you can
						   interact with all of Synapse's functionality programmatically. Create projects, upload &amp; download files, generate provenance, query, create wikis and more
						   all from the comfort of your own code." />
						<b:Heading size="H6" text="Don't see your language of choice here? Check out our full&nbsp;">
							<b:Anchor href="http://rest.synapse.org" text="REST API documentation" target="_blank"/>
						</b:Heading>
						<b:Row>
							<b:Column size="SM_3">
								<bh:Div>
									<t:Table>
										<t:TableRow>
											<t:TableData addStyleNames="vertical-align-top">
												<g:Image resource='{sageImageBundle.logoR45}' addStyleNames="margin-right-5"/>
											</t:TableData>
											<t:TableData>
												<b:Heading size="H4" addStyleNames="font-weight-bolder" text="R client" />
												<b:Anchor href="http://r-docs.synapse.org/" addStyleNames="displayBlock" target="_blank" text="API documentation"/>
												<b:Anchor href="#!Help:RClient" addStyleNames="displayBlock" target="_blank" text="Getting started"/>
											</t:TableData>
										</t:TableRow>
									</t:Table>
								</bh:Div>
							</b:Column>
							<b:Column size="SM_3">
								<bh:Div>
									<t:Table>
										<t:TableRow>
											<t:TableData addStyleNames="vertical-align-top">
												<g:Image resource='{sageImageBundle.logoPython45}' addStyleNames="margin-right-5"/>
											</t:TableData>
											<t:TableData>
												<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Python client" />
												<b:Anchor href="http://python-docs.synapse.org/" addStyleNames="displayBlock" target="_blank" text="API documentation"/>
												<b:Anchor href="#!Help:PythonClient" addStyleNames="displayBlock" target="_blank" text="Getting started"/>
											</t:TableData>
										</t:TableRow>
									</t:Table>
								</bh:Div>
							</b:Column>
							<b:Column size="SM_3">
								<bh:Div>
									<t:Table>
										<t:TableRow>
											<t:TableData addStyleNames="vertical-align-top">
												<g:Image resource='{sageImageBundle.logoCommandLine45}' addStyleNames="margin-right-5"/>
											</t:TableData>
											<t:TableData>
												<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Command line client" />
												<b:Anchor href="http://python-docs.synapse.org/CommandLineClient.html" addStyleNames="displayBlock" target="_blank" text="API documentation"/>
												<b:Anchor href="#!Help:CommandLineClient" addStyleNames="displayBlock" target="_blank" text="Getting started"/>
											</t:TableData>
										</t:TableRow>
									</t:Table>
								</bh:Div>
							</b:Column>
							<b:Column size="SM_3">
								<bh:Div>
									<t:Table>
										<t:TableRow>
											<t:TableData addStyleNames="vertical-align-top">
												<g:Image resource='{sageImageBundle.logoJava45}' addStyleNames="margin-right-5"/>
											</t:TableData>
											<t:TableData>
												<b:Heading size="H4" addStyleNames="font-weight-bolder" text="Java client" />
												<b:Anchor href="https://github.com/Sage-Bionetworks/Synapse-Repository-Services/blob/develop/client/synapseJavaClient/src/main/java/org/sagebionetworks/client/SynapseClient.java" addStyleNames="displayBlock" target="_blank" text="API documentation"/>
												<b:Anchor href="#!StandaloneWiki:JavaClient" addStyleNames="displayBlock" target="_blank" text="Getting started"/>
											</t:TableData>
										</t:TableRow>
									</t:Table>
								</bh:Div>
							</b:Column>						
						</b:Row>
					</b:Panel>
				</b:Column>
			</b:Row>
		</b:Container>

		<b:Container fluid="true">
			<b:Row addStyleNames="synapse-blue-bg margin-top-20">
				<b:Column size="SM_12">
					<b:Heading size="H3" addStyleNames="margin-top-5 margin-bottom-5 color-white margin-left-10"
							text="EXPLORE HOW RESEARCHERS ARE USING SYNAPSE"
					></b:Heading>
				</b:Column>
			</b:Row>
		</b:Container>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_4" addStyleNames="margin-top-40 ">
					<g:FocusPanel ui:field="researchCommunitiesBox">
						<bh:Div addStyleNames="synapse-yellow-bg padding-10 imageButton margin-left-10 margin-right-10" height="200px">
							<t:Table>
								<t:TableRow>
									<t:TableData paddingRight="2">
										<g:Image resource='{sageImageBundle.people}' addStyleNames="margin-top-left-10" />
									</t:TableData>
									<t:TableData paddingRight="2">
										<b:Heading size="H5" addStyleNames="color-white font-weight-bolder" text="RESEARCH COMMUNITIES"></b:Heading>
									</t:TableData>
								</t:TableRow>
							</t:Table>
							<b:Heading size="H5" addStyleNames="color-white" text="See the communities working on shared data hosted on Synapse. >"></b:Heading>
