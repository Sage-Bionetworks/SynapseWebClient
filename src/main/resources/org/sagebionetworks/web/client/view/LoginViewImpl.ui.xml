<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		div.center {   
			margin-left: auto;   
			margin-right: auto;   
			width: 8em;
			padding:15px; 
		}
	</ui:style>
	<g:HTMLPanel>
        <div class="color-line"></div>
        <div class="clear"></div>
			<g:SimplePanel ui:field="header" />
		        <div class="separator margin-top-10-imp"></div>
		    	<div class="container margin-top-15"> 		
				<!-- LoginView -->				
					<div class="well col-md-6 col-md-offset-3">
						<h2>Login to Synapse </h2>
						<g:SimplePanel ui:field="loginWidgetPanel" />
						<div class="row margin-top-15">
						    <div class="col-md-6 col-sm-6">
								<g:SimplePanel ui:field="passwordResetButtonPanel" />						        
						    </div>
							<div class="col-md-6 col-sm-6">
								<g:SimplePanel ui:field="registerButtonPanel" styleName="right"/>							   
							</div>
						</div>
						
						<!-- Logout View -->
						<g:SimplePanel ui:field="logoutPanel" />
					</div>
					<br/>
        		</div> <!-- close class="container" -->

				
<!-- start footer -->
            <div class="clear"></div>
		<g:SimplePanel ui:field="footer" />
<!-- end footer -->
	</g:HTMLPanel>
</ui:UiBinder> 