<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<bh:Div width="365px" addStyleNames="center-in-div">
		<b:Heading size="H2" text="Submit NIMH/NRGR Data Access Token"
			addStyleNames="text-align-center margin-top-20" />
		<bh:Div width="100%">
			<b:Heading size="H4" subText="Enter token"
				addStyleNames="flexcontainer-justify-center margin-top-20" />
			<b:FormGroup>
				<b:TextArea ui:field="textArea" placeholder="" />
			</b:FormGroup>
			<bh:Div ui:field="synAlertContainer" marginBottom="10" />
			<b:Button ui:field="submitButton" size="LARGE"
				width="100%" addStyleNames="lightGreyBackground no-background"
				text="" paddingTop="0" paddingBottom="0" paddingLeft="0" />
		</bh:Div>
	</bh:Div>
</ui:UiBinder> 