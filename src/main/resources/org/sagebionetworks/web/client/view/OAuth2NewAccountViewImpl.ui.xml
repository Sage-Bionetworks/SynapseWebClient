<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<g:HTMLPanel>
			<div class="container margin-top-15">
			<div class="row">
			    <div class="col-sm-10 col-sm-offset-1">
			        <h2 class="margin-bottom-40">Register with Synapse</h2>
			        <div class="margin-bottom-40" ui:field="contentHtml" />
				    <div ui:field="registrationForm">
				        <div class="form-horizontal">
							  <div ui:field="userName" class="form-group row">
							    <label class="col-sm-3 control-label">Username</label>
							    <div class="col-sm-9">
							      <b:TextBox ui:field="userNameField" placeholder="Enter username"/>
							    </div>
							  </div>
						</div>
					</div>
				</div>
			</div>
			<bh:Div ui:field="synAlertContainer"/>
			<div class="row margin-bottom-40">
				<div class="col-sm-10 col-sm-offset-1">
			    	<b:Button ui:field="registerBtn" addStyleNames="margin-top-10" type="PRIMARY" size="LARGE" pull="RIGHT" dataLoadingText="Register...">Register</b:Button>
				</div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 