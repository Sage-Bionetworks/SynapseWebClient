<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
		<bh:Div marginTop="15" addStyleNames="max-width-350 center-in-div">
			<b:Heading text="Register with Synapse" size="H4" addStyleNames="margin-top-20"/>
			<b:FormGroup>
				<b:FormLabel>Choose your username</b:FormLabel>
				<b:TextBox ui:field="userNameField" placeholder="" />
			</b:FormGroup>
			<bh:Div ui:field="synAlertContainer"/>
			<b:Button ui:field="registerBtn" pull="RIGHT" addStyleNames="margin-top-10" type="PRIMARY">Register</b:Button>
		</bh:Div>
</ui:UiBinder> 