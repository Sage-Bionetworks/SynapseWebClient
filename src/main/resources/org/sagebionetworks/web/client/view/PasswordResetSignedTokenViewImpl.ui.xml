<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">

	<bh:Div
		addStyleNames="max-width-350 center-in-div form-horizontal">
		<b:Heading size="H4"
			subText="Set your new Synapse account password"
			addStyleNames="text-align-center margin-top-20" />
		<bh:Div>
			<b:Input ui:field="password1Field" type="PASSWORD"
				placeholder="Enter new password"
				addStyleNames="margin-top-20 whiteBackground" autoComplete="false" />
			<b:Input ui:field="password2Field" type="PASSWORD"
				placeholder="Confirm new password"
				addStyleNames="margin-top-20 whiteBackground" autoComplete="false" />
			<b:Button ui:field="changePasswordBtn" size="LARGE"
				type="DEFAULT" text="Change Password" width="100%" marginTop="15" />
		</bh:Div>
		<bh:Div>
			<g:SimplePanel ui:field="passwordSynAlertPanel" />
		</bh:Div>
	</bh:Div>
</ui:UiBinder> 