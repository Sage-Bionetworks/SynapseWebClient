<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	
	<ui:with field='sageImageBundle' type='org.sagebionetworks.web.client.SageImageBundle'/>
	
	<g:HTMLPanel>
        <div class="clear"></div>
		<g:SimplePanel ui:field="header" />
        <div class="container margin-top-15">
    	    <span ui:field="loadingUI" class="center-block center margin-150"><g:Image resource='{sageImageBundle.loading31}' />&nbsp;Loading...</span>
    	    <g:SimplePanel ui:field="successContainer" visible="false">	</g:SimplePanel>
    	    <div ui:field="quizSuccessUI" style="display:none" class="row">
				<div class="col-sm-offset-1 col-sm-10 margin-top-15">
				    <div class="panel panel-success">
					      <div class="panel-heading">
							<b:Heading size="H3" addStyleNames="panel-title" text="Quiz passed"></b:Heading>
					      </div>
					      <b:Heading size="H4" ui:field="successScoreContainer" addStyleNames="margin-10"></b:Heading>
					</div>
    			</div>
			</div>
			<div ui:field="quizFailureUI" style="display:none" class="row">
				<div class="col-sm-offset-1 col-sm-10 margin-top-15">
				    <div class="panel panel-danger">
					      <div class="panel-heading">
							<b:Heading size="H3" addStyleNames="panel-title" text="Quiz failed"></b:Heading>
					      </div>
					      <b:Heading size="H4" ui:field="failureScoreContainer" addStyleNames="margin-10"></b:Heading>
					      <div class="margin-10">
								<p>Please review the items shown in red below, and <g:Anchor ui:field="tryAgainLink" styleName="link" text="try again"/>.</p>
					      </div>
					</div>
    			</div>
			</div>
			<g:HTMLPanel ui:field="quizContainer" visible="false">
				<div class="row">
				    <div class="highlight-box padding-top-15-imp col-sm-offset-1 col-sm-10">
				        <g:Button ui:field="tutorialButton1" styleName="btn btn-default right margin-right-10" text="Open the Tutorial"/>
					    <div ui:field="quizHeader" class="margin-bottom-40 margin-right-10 margin-left-10 markdown"></div>
					    <div role="form">
						    <g:FlowPanel ui:field="testContainer">
						    </g:FlowPanel>
		   				</div>
					</div>
					<div class="col-sm-offset-1 col-sm-10">
					    <g:Button ui:field="submitButton" styleName="btn btn-primary btn-lg margin-top-10 margin-bottom-40 right" text="Submit"/>
					</div>
				</div>
			</g:HTMLPanel>
		</div> <!-- close class="container" -->
<!-- start footer -->
		<div class="clear"></div>
		<g:SimplePanel ui:field="footer" />
<!-- end footer -->
	</g:HTMLPanel>
</ui:UiBinder> 
