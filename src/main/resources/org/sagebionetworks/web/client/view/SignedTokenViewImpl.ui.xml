<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:with field='sageImageBundle' type='org.sagebionetworks.web.client.SageImageBundle'/>
	
	<bh:Div>
		<bh:Div addStyleNames="color-line" />
		<g:SimplePanel ui:field="header" />
		<b:Container addStyleNames="min-height-200 margin-top-60">
			<bh:Span ui:field="loadingUI" addStyleNames="center-block center">
				<g:Image resource='{sageImageBundle.loading31}' />
				<bh:Text>&nbsp;Loading...</bh:Text>
			</bh:Span>
			<!-- Confirm unsubscribe UI -->
			<b:Modal ui:field="confirmUnsubscribeUI" title="Are you sure you want to stop receiving messages from Synapse?" closable="true"
				dataBackdrop="STATIC" dataKeyboard="false" b:id="confirmUnsubscribeUI">
				<b:ModalBody>
					<g:SimplePanel ui:field="unsubscribeUserBadgeContainer" />
					<bh:Paragraph addStyleNames="margin-top-10">
						Youâ€™ll miss out on:
						<bh:UnorderedList>
							<b:ListItem text="invitations to join a team"></b:ListItem>
							<b:ListItem text="requests to join your team"></b:ListItem>
							<b:ListItem text="invitations to access data"></b:ListItem>
							<b:ListItem text="requests to view your projects"></b:ListItem>
							<b:ListItem text="user verification status notifications"></b:ListItem>
							<b:ListItem text="discussion forum notifications"></b:ListItem>
							<b:ListItem text="challenge submission notifications"></b:ListItem>
						</bh:UnorderedList>
					</bh:Paragraph>
				</b:ModalBody>
				<b:ModalFooter>
					<b:Button ui:field="confirmUnsubscribe" type="PRIMARY"
						dataLoadingText="Saving...">Unsubscribe</b:Button>
					<b:Button ui:field="cancelUnsubscribe" type="DEFAULT"
						dataDismiss="MODAL">Cancel</b:Button>
				</b:ModalFooter>
			</b:Modal>
			<!-- Success UI -->
			<b:Row ui:field="successUI">
				<b:Column size="XS_12, MD_6" offset="MD_3">
					<bh:Div>
						<b:Alert type="SUCCESS">
							<b:Heading size="H3" ui:field="successMessage" addStyleNames="color-white" />
						</b:Alert>
					</bh:Div>
				</b:Column>
			</b:Row>
			
			<!-- Error UI and standard ok button-->
			<b:Row>
				<b:Column size="XS_12, MD_6" offset="MD_3">
					<g:SimplePanel ui:field="synapseAlertContainer" />
				</b:Column>
			</b:Row>
			<b:Row addStyleNames="margin-top-60">
				<b:Column size="XS_12, MD_6" offset="MD_3">
					<b:Button ui:field="okButton" type="PRIMARY" text="Continue" size="LARGE" pull="RIGHT"></b:Button>
				</b:Column>
			</b:Row>
		</b:Container>
		<g:SimplePanel ui:field="footer" />
	</bh:Div>

</ui:UiBinder> 