<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<bh:Div>
		<g:SimplePanel ui:field="header" />
		
		<bh:Div addStyleNames="margin-top-30 margin-left-35 min-height-400 margin-right-10 light-border">
			<b:Heading size="H2" text="Notification Settings" addStyleNames="margin-top-30 margin-left-35 margin-right-10" />
			<bh:Div ui:field="synAlertContainer" />
			<bh:Div ui:field="topicWidgetContainer" />
			
			<b:Radio ui:field="followButton" text="Following" name="subscriptionState" addStyleNames="font-size-36" />
			<b:Heading size="H5" text="You will receive notifications on this topic" addStyleNames="margin-left-10 margin-right-10 margin-bottom-20" />
			<b:Radio ui:field="unfollowButton" text="Not following" name="subscriptionState" addStyleNames="font-size-36"/>
			<b:Heading size="H5" text="You will not receive notifications on this topic" addStyleNames="margin-left-10 margin-right-10 margin-bottom-20" />
			
			<!--  <b:Anchor ui:field="notificationCenterLink" text="Manage all notifications" addStyleNames="margin-top-10 font-size-24"/>  -->
			
		</bh:Div>
		<bh:Div addStyleNames="clear" />
		<g:SimplePanel ui:field="footer" />
	</bh:Div>
</ui:UiBinder> 