<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:a="urn:import:org.sagebionetworks.web.client.widget.entity.menu.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">

	<g:HTMLPanel>
		<div class="separator margin-top-3"></div>
		<div class="margin-top-20 margin-right-20 margin-left-20">
			<b:Heading size="H3" ui:field="teamNameHeading" />
			<bh:Div
				addStyleNames="border-top-6-synapse-blue border-left-1 border-right-1 border-bottom-1 flexcontainer-row"
				marginTop="35">
				<bh:Div
					addStyleNames="flexcontainer-column flexcontainer-column-fill-width">
					<bh:Div ui:field="teamBadgeContainer" />
				</bh:Div>
				<bh:Div ui:field="commandsContainer"
					addStyleNames="flexcontainer-column flexcontainer-align-items-flex-end min-width-70">
					<bh:Div>
						<w:HelpWidget
							helpMarkdown="Teams are a way to easily manage groups of users for the purposes of project access, communication, and challenge participation."
							href="http://docs.synapse.org/articles/teams.html"
							iconStyles="lightGreyText font-size-18 displayInlineBlock"
							addStyleNames="margin-top-15 margin-bottom-10" placement="LEFT" />
						<b:DropDown ui:field="dashboardDropdown"
							addStyleNames="imageButton SRC-primary-background-color-hover displayInlineBlock"
							marginTop="15" marginRight="10">
							<b:Anchor ui:field="toolsMenuLink" dataToggle="DROPDOWN"
								addStyleNames="textDecorationNone" />
							<b:DropDownMenu
								addStyleNames="dropdown-menu-right">
								<b:AnchorListItem icon="PLUS_SQUARE_O"
									iconFixedWidth="true" ui:field="inviteMemberItem"
									visible="false" text="Invite User" />
								<b:AnchorListItem icon="EDIT"
									iconFixedWidth="true" ui:field="editTeamItem" visible="false"
									text="Edit Team" />
								<b:AnchorListItem icon="TIMES_CIRCLE"
									iconFixedWidth="true" ui:field="deleteTeamItem" visible="false"
									text="Delete Team" />
								<b:AnchorListItem icon="ARROW_RIGHT"
									iconFixedWidth="true" ui:field="leaveTeamItem" visible="false"
									text="Leave Team" />
								<b:AnchorListItem icon="FLAG"
									iconFixedWidth="true" ui:field="manageAccessItem"
									text="(ACT) Manage Access Requirements" visible="false" />
								<b:AnchorListItem icon="LIST_ALT"
									iconFixedWidth="true" ui:field="teamProjectsItem"
									text="View Associated Projects" visible="false" />
							</b:DropDownMenu>
						</b:DropDown>
					</bh:Div>
				</bh:Div>
			</bh:Div>
			<bh:Div ui:field="widgetsContainer" />
			<g:SimplePanel ui:field="inviteMemberPanel" />

			<g:SimplePanel ui:field="synAlertPanel" />
			<div class="row">
				<g:HTMLPanel ui:field="mainContainer"
					styleName="col-md-12">
					<bh:Div ui:field="publicJoinField" visible="false"
						marginTop="10">
						<bh:Italic>Can be joined without team manager authorization </bh:Italic>
					</bh:Div>
					<b:Anchor ui:field="showMapLink" text="Show map"
						icon="MAP_MARKER" visible="false" />
					<b:Modal ui:field="mapModal" closable="true"
						dataBackdrop="STATIC" dataKeyboard="true"
						addStyleNames="modal-fullscreen">
						<b:ModalBody>
							<bh:Div ui:field="mapPanel" />
						</b:ModalBody>
						<b:ModalFooter>
							<b:Button type="DEFAULT" dataDismiss="MODAL">Ok</b:Button>
						</b:ModalFooter>
					</b:Modal>
					<g:SimplePanel ui:field="joinTeamPanel"
						addStyleNames="margin-bottom-5 margin-top-10" />
					<g:SimplePanel ui:field="openMembershipRequestsPanel"
						addStyleNames="margin-bottom-5 margin-top-60" />
					<g:SimplePanel ui:field="openUserInvitationsPanel"
						addStyleNames="margin-bottom-5 margin-top-60" />
					<bh:Div addStyleNames="SRC-grid-item" marginBottom="5"
						height="40px">
						<b:Heading size="H3" text="Managers" />
					</bh:Div>
					<g:SimplePanel ui:field="managerListPanel"
						addStyleNames="margin-bottom-40" />

					<bh:Div addStyleNames="SRC-card-grid-row margin-top-60">
						<bh:Div addStyleNames="SRC-grid-item" marginBottom="5"
							height="40px">
							<b:Heading size="H3" text="Members" />
						</bh:Div>
						<bh:Div addStyleNames="SRC-grid-item" height="10px" />
						<bh:Div
							addStyleNames="SRC-grid-item flexcontainer-align-items-flex-end"
							marginTop="10" marginBottom="5" height="50px">
							<bh:Div>
								<b:Icon ui:field="memberSearchButton" type="SEARCH"
									addStyleNames="imageButton font-size-22 movedown-28 synapse-green left" />
								<b:TextBox ui:field="memberSearchTextBox"
									height="35px" width="100%"
									addStyleNames="inline-block padding-left-35"
									placeholder="Find team members" />
							</bh:Div>
						</bh:Div>
					</bh:Div>
					<g:SimplePanel ui:field="memberListPanel"
						addStyleNames="margin-bottom-40" />
				</g:HTMLPanel>
			</div>
			<div>
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 