<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">
	<g:HTMLPanel>
		<div class="container margin-top-15">
			<w:InfoAlert ui:field="passwordResetRequired"
				alertType="INFO" icon="INFO_CIRCLE"
				message="Your password does not meet our security requirements and must be reset."
				linkText="" visible="false" />
			<div style="width: 350px;" class="center-in-div">
				<b:Heading size="H2" ui:field="pageTitle"
					addStyleNames="text-align-center" marginTop="20" marginBottom="40" />
				<g:SimplePanel ui:field="loadingPanel" />
				<span ui:field="contentHtml" />
				<div ui:field="resetPasswordForm">
					<div class="form-horizontal">
						<div ui:field="currentPassword" class="form-group row">
							<label class="col-sm-3 control-label">Current Password</label>
							<div class="col-sm-9">
								<g:PasswordTextBox
									ui:field="currentPasswordField" styleName="form-control" />
								<div ui:field="currentPasswordError" style="display:none"
									class="help-block"></div>
							</div>
						</div>
						<div ui:field="password1" class="form-group row">
							<label class="col-sm-3 control-label">Password</label>
							<div class="col-sm-9">
								<g:PasswordTextBox ui:field="password1Field"
									styleName="form-control" />
								<div ui:field="password1Error" style="display:none"
									class="help-block"></div>
							</div>
						</div>
						<div ui:field="password2" class="form-group row">
							<label class="col-sm-3 control-label">Confirm password</label>
							<div class="col-sm-9">
								<g:PasswordTextBox ui:field="password2Field"
									styleName="form-control" />
								<div ui:field="password2Error" style="display:none"
									class="help-block"></div>
							</div>
						</div>
					</div>
				</div>
				<div ui:field="sendPasswordChangeForm">
					<bh:Div ui:field="emailAddress">
						<b:Heading size="H4"
							subText="Please enter your email address or Synapse user name and weâ€™ll send you instructions to reset your password."
							addStyleNames="flexcontainer-justify-center margin-top-10" />
						<b:TextBox ui:field="emailAddressField" width="100%"
							addStyleNames="margin-top-20" />
						<b:Alert ui:field="emailAddressError" width="100%"
							type="DANGER" />
					</bh:Div>
				</div>
				<b:Button ui:field="submitBtn" text="Submit" size="LARGE"
					type="SUCCESS" width="100%" addStyleNames="margin-top-10" />
				<b:Heading size="H5"
					addStyleNames="text-align-center margin-top-20">
					<b:Anchor text="&lt; Back to Sign In"
						addStyleNames="synapse-green" href="#!LoginPlace:0" />
				</b:Heading>
				<bh:Div ui:field="synAlertContainer" />
				<div class="clear margin-top-30"></div>
			</div>
		</div> <!-- close class="container" -->

	</g:HTMLPanel>
</ui:UiBinder> 