<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<g:HTMLPanel>
		<div class="container margin-top-15 min-height-400">
			<bh:Div width="365px" addStyleNames="center-in-div" ui:field="createSynapseAccountUI">
				<b:Heading size="H2" text="Create Synapse Account"
					addStyleNames="text-align-center margin-top-20" />
				<bh:Div width="100%"
					ui:field="googleSynapseAccountCreationUI">
					<b:Heading size="H4" subText="Choose a username"
						addStyleNames="flexcontainer-justify-center margin-top-20" />
					<b:FormGroup>
						<b:TextBox ui:field="userNameField" placeholder="" />
					</b:FormGroup>
					<bh:Div ui:field="googleSynAlertContainer" marginBottom="10" />
					<b:Button ui:field="googleSignUpButton" size="LARGE"
						width="100%" addStyleNames="lightGreyBackground no-background"
						text="" paddingTop="0" paddingBottom="0" paddingLeft="0" />
					<bh:Div addStyleNames="centered-in-hr" marginTop="40"
						marginBottom="40">
						<bh:Span addStyleNames="lightGreyText">or</bh:Span>
					</bh:Div>
				</bh:Div>
				<b:Heading size="H4"
					subText="Enter your email address and we will send you the instructions on how to complete the registration process."
					addStyleNames="flexcontainer-justify-center margin-top-20" />
				<bh:Div ui:field="registerWidgetContainer"
					addStyleNames="margin-top-20" />
				<b:Heading size="H5"
					addStyleNames="text-align-center margin-top-20">
					<b:Anchor text="&lt; Back to Sign In"
						addStyleNames="synapse-green" href="#!LoginPlace:0" />
				</b:Heading>
			</bh:Div>
			<bh:Div ui:field="emailSentUI" visible="false" marginTop="40">
				<b:Heading size="H3" text="Please check your email to finish creating your account" />
				<bh:Paragraph addStyleNames="margin-top-30" text="We have sent you an email to the email address provided. Please check your email and click the provided link to activate your account." />
				<bh:Div ui:field="pageProgressContainer"/>
			</bh:Div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 