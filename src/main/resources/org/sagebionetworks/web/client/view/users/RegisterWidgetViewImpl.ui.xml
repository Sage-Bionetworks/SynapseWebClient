<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<bh:Div width="100%">
		<bh:Div addStyleNames="displayInlineTable" ui:field="inlineUI" width="100%">
			<b:InputGroup width="100%">
				<g:TextBox ui:field="emailAddressField" height="43px" width="100%"/>
				<b:InputGroupButton>
					<b:Button ui:field="registerBtn" text="Sign up" type="PRIMARY" size="LARGE"/>
				</b:InputGroupButton>
			</b:InputGroup>
		</bh:Div>
		<bh:Div ui:field="blockUI" width="100%" visible="false">
			<bh:Div addStyleNames="margin-bottom-10">
				<g:TextBox ui:field="emailAddressField2" height="43px" width="100%"/>
			</bh:Div>
			<b:Button ui:field="registerBtn2" text="Sign up" size="LARGE" type="SUCCESS" width="100%"/>
		</bh:Div>
		<bh:Div ui:field="synAlertContainer" />
		<b:Alert ui:field="emailSentAlert" visible="false" type="INFO" text="We have sent you an email with instructions on how to complete the registration process." />
	</bh:Div>
</ui:UiBinder> 