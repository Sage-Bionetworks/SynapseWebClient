<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

    <bh:Div>
        <b:TextArea ui:field="commaSeparatedTextBox" height="100px" placeholder="Paste comma delimited values here."/>
        <b:Button ui:field="cancelButton"
                  type="INFO">Cancel</b:Button>
        <b:Button ui:field="addButton"
                  type="INFO">Add</b:Button>
    </bh:Div>
</ui:UiBinder>