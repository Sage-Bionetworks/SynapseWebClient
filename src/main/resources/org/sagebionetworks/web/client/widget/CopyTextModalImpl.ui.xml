<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
  <b:Modal
    ui:field="modal"
    closable="false"
    dataBackdrop="STATIC"
    dataKeyboard="true"
    size="LARGE"
  >
    <b:ModalBody>
      <g:TextBox
        ui:field="textBox"
        width="100%"
        addStyleNames="border-none noBackground margin-right-15"
        readOnly="true"
      />
    </b:ModalBody>
    <b:ModalFooter>
      <b:Button ui:field="closeButton">Close</b:Button>
    </b:ModalFooter>
  </b:Modal>
</ui:UiBinder>
