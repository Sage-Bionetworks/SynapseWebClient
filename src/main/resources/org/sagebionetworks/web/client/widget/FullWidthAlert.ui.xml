<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<b:Alert addStyleNames="fullWidthAlert global" type="INFO" marginTop="5">
		<b:IconStack addStyleNames="iconArea font-size-20">
			<b:Icon addStyleNames="iconBackground" type="CIRCLE" stackBase="true"/>
			<b:Icon ui:field="icon" addStyleNames="iconForeground" type="CHECK_CIRCLE" stackTop="true"/>
		</b:IconStack>
		<bh:Span addStyleNames="messageArea font-size-15" marginLeft="10">
			<bh:Strong ui:field="messageTitle" visible="false"/>
			<bh:Span ui:field="messageSpan" />
		</bh:Span>
		<b:Button text="link" ui:field="link" type="LINK"
				addStyleNames="buttonArea font-size-15"
				marginRight="10" />
	</b:Alert>
</ui:UiBinder>