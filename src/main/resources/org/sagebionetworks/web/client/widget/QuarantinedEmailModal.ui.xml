<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">

	<b:Modal title="Update Your Synapse Email Address"
		closable="true" dataBackdrop="STATIC" dataKeyboard="true"
		b:id="confirmUnsubscribeUI">
		<b:ModalBody>
			<bh:Paragraph addStyleNames="margin-top-10">
				It looks like the primary email address associated to your account
				is no longer valid.
				Please update your primary email address to
				continue to receive:
				<bh:UnorderedList>
					<b:ListItem text="emails and private messages"></b:ListItem>
					<b:ListItem text="invitations to join a team"></b:ListItem>
					<b:ListItem text="requests to join your team"></b:ListItem>
					<b:ListItem text="invitations to access data"></b:ListItem>
					<b:ListItem text="requests to view your projects"></b:ListItem>
					<b:ListItem
						text="user verification status notifications"></b:ListItem>
					<b:ListItem text="discussion forum notifications"></b:ListItem>
					<b:ListItem text="challenge submission notifications"></b:ListItem>
				</bh:UnorderedList>
			</bh:Paragraph>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="accountSettingsLink" type="PRIMARY">Account
				Settings</b:Button>
			<b:Button type="LINK" dataDismiss="MODAL">Close</b:Button>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>