<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">

	<bh:Div>
		<bh:Div>
			<b:FormGroup>
				<b:FormLabel>Resources</b:FormLabel>
				<bh:Div ui:field="subjectsContainer" />
				<b:InputGroup ui:field="entityUI">
					<b:TextBox ui:field="entityIds"
						placeholder="Enter Synapse IDs (i.e. 'syn123, syn456')"
						autoComplete="false" />
					<b:InputGroupButton>
						<b:Button ui:field="synapseMultiIdButton"
							text="Add Entities" icon="PLUS" />
					</b:InputGroupButton>
					<w:HelpWidget
						helpMarkdown="Enter Synapse IDs (i.e. `syn123, syn456`)"
						addStyleNames="margin-left-5 moveup-10" placement="LEFT" />
				</b:InputGroup>
				<b:InputGroup ui:field="teamUI">
					<b:TextBox ui:field="teamIds"
						placeholder="Enter Team IDs (i.e. '123, 456')"
						autoComplete="false" />
					<b:InputGroupButton>
						<b:Button ui:field="teamMultiIdButton" text="Add Teams"
							icon="PLUS" />
					</b:InputGroupButton>
					<w:HelpWidget
						helpMarkdown="Enter Team IDs (i.e. `123, 456`)"
						addStyleNames="margin-left-5 moveup-10" placement="LEFT" />
				</b:InputGroup>
			</b:FormGroup>
			<b:FormGroup ui:field="arTypeUI">
				<b:FormLabel>Access requirement type</b:FormLabel>
				<b:Radio ui:field="managedActTypeButton"
					text="Controlled - requests are in Synapse"
					name="accessRequirementType" value="true" />
				<b:Radio ui:field="actTypeButton"
					text="Controlled - requests are handled outside of Synapse (Jira/email/spreadsheets, legacy requirement)"
					name="accessRequirementType" />
				<b:Radio ui:field="termsOfUseButton" text="Click wrap"
					name="accessRequirementType" />
			</b:FormGroup>
		</bh:Div>
	</bh:Div>
</ui:UiBinder>