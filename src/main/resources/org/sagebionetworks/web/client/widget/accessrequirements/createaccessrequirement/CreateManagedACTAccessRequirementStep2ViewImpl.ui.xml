<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<bh:Div>
		<bh:Div>
			<b:FormGroup>
				<b:FormLabel>Instructions (Wiki)</b:FormLabel>
				<bh:Div ui:field="wikiPageContainer" />
				<b:Button ui:field="editWikiButton" text="Edit Instructions" />
			</b:FormGroup>
			<b:ButtonGroup>
				<b:Radio name="hasrequest" ui:field="hasNoRequestButton" text="Requests are handled outside of Synapse (Jira/email/spreadsheets, legacy requirement)" />
				<b:Radio name="hasrequest" ui:field="hasRequestButton" text="Requests are in Synapse" value="true" />
			</b:ButtonGroup>
			<bh:Div ui:field="hasRequestUI">
				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H5" text="Data Access Request Parameters" />
					</b:PanelHeader>
					<b:PanelBody>
						<b:FormGroup>
							<b:FormLabel>Accessor requirements</b:FormLabel>
							<b:CheckBox ui:field="certifiedCheckbox" text="Accessors must be certified." />
							<b:CheckBox ui:field="validatedCheckbox"
								text="Accessors must have a validated profile." />
						</b:FormGroup>
						<b:FormGroup>
							<b:FormLabel>DUC</b:FormLabel>
							<b:CheckBox ui:field="ducCheckbox" text="DUC is required." />
							<bh:Div ui:field="ducTemplateFileContainer" />
							<bh:Div ui:field="ducTemplateFileUploadContainer" />
						</b:FormGroup>
						<b:CheckBox ui:field="irbCheckbox" text="IRB approval is required." />
						<b:CheckBox ui:field="otherAttachmentsCheckbox" text="Other documents are required." />
						<b:FormGroup>
							<b:FormLabel>Expiration Period (Days)</b:FormLabel>
							<b:TextBox ui:field="expirationPeriodTextbox"/>
						</b:FormGroup>
						<b:CheckBox ui:field="intendedDataUsePublicCheckbox"
							text="Intended Data Use statements will be publicly available." />					
					</b:PanelBody>
				</b:Panel>
			</bh:Div>
		</bh:Div>
	</bh:Div>
</ui:UiBinder>