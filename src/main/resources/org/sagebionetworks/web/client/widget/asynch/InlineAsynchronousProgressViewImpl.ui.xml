<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget"
>
  <bh:Div addStyleNames="flexcontainer-row" width="100%">
    <bh:Div
      ui:field="spinnerColumn"
      visible="false"
      addStyleNames="inline-block"
    >
      <w:LoadingSpinner
        ui:field="spinner"
        size="45px"
        addStyleNames="inline-block"
      />
    </bh:Div>
    <bh:Div
      addStyleNames="font-size-15 inline-block"
      ui:field="title"
      marginLeft="15"
      marginTop="12"
    />
    <bh:Div
      addStyleNames="font-size-15 hidden-xs inline-block"
      ui:field="message"
      marginLeft="20"
      marginTop="12"
      height="60px"
    />
    <bh:Div ui:field="progressColumn" visible="false">
      <b:Progress addStyleNames="center-in-div">
        <b:ProgressBar
          ui:field="progressBar"
          type="INFO"
          percent="0"
          text="0%"
        />
      </b:Progress>
    </bh:Div>
  </bh:Div>
</ui:UiBinder>
