<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">
	<b:Modal ui:field="modal" closable="true" dataBackdrop="STATIC"
		dataKeyboard="true">
		<b:ModalHeader>
			<b:Heading size="H4" text="Download Options"
				addStyleNames="displayInline" />
			<w:HelpWidget
				helpMarkdown="Synapse is built on a number of RESTful web APIs that allow users to interact with the system via a number of clients. The [Synapse API documentation](http://docs.synapse.org/articles/api_documentation.html) is available online."
				href="http://docs.synapse.org/articles/getting_started.html#installing-synapse-clients"
				addStyleNames="margin-left-5" placement="BOTTOM" />
		</b:ModalHeader>
		<b:ModalBody>
			<b:TabPanel>
				<b:NavTabs>
					<b:TabListItem active="true"
						ui:field="pythonTabListItem" text="Python" />
					<b:TabListItem ui:field="rTabListItem" text="R" />
					<b:TabListItem ui:field="cliTabListItem"
						text="Command Line" />
				</b:NavTabs>
				<b:TabContent>
					<b:TabPane ui:field="pythonTabPane" active="true">
						<g:HTMLPanel>
							<pre>
								<code class="nohighlight">
									import synapseclient
									<br />
									import synapseutils
									<br />
									<br />
									syn = synapseclient.Synapse()
									<br />
									syn.login('synapse_username','password')
									<br />
									files = synapseutils.syncFromSynapse(syn, '
									<span ui:field="id2" />
									')
									<br />
								</code>
							</pre>
						</g:HTMLPanel>
					</b:TabPane>
					<b:TabPane ui:field="rTabPane">
						<g:HTMLPanel>
							<pre>
								<code class="nohighlight">
									library(synapser)
									<br />
									library(synapserutils)
									<br />
									<br />
									synLogin('synapse_username', 'password')
									<br />
									files &#60;- synapserutils::syncFromSynapse('
									<span ui:field="id3" />
									')
									<br />
								</code>
							</pre>
						</g:HTMLPanel>
					</b:TabPane>
					<b:TabPane ui:field="cliTabPane">
						<g:HTMLPanel>
							<pre>
								<code class="nohighlight">
									synapse get -r
									<span ui:field="id1" />
									<br />
								</code>
							</pre>
						</g:HTMLPanel>
					</b:TabPane>
				</b:TabContent>
			</b:TabPanel>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button type="PRIMARY" text="OK" dataDismiss="MODAL" />
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>