<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">
	<bh:Span>
		<b:Anchor dataToggle="MODAL" dataTarget="#folderClientHelpModal" addStyleNames="moveup-8">
			<button class="btn btn-primary">
				<i class="fa fa-download margin-right-5"></i>
				<span class="font-size-11">How to</span><br/><span class="font-size-15">Download</span>
			</button>
		</b:Anchor>
		<b:Modal closable="true" dataBackdrop="STATIC" dataKeyboard="true" b:id="folderClientHelpModal">
			<b:ModalHeader>
			    <b:Heading size="H4" text="Download Options" addStyleNames="displayInline"/>
			    <w:HelpWidget helpMarkdown="Synapse is built on a number of RESTful web APIs that allow users to interact with the system via a number of clients. The [Synapse API documentation](http://docs.synapse.org/articles/api_documentation.html) is available online." 
								href="http://docs.synapse.org/articles/getting_started.html#installing-synapse-clients" addStyleNames="margin-left-5" placement="BOTTOM"/>
			</b:ModalHeader>
			<b:ModalBody>
				<b:TabPanel>
					<b:NavTabs>
						<b:TabListItem active="true" dataTarget="#containerCommandLineTab" text="Command Line" />
						<b:TabListItem dataTarget="#containerPythonTab" text="Python" />
					</b:NavTabs>
					<b:TabContent>
						<b:TabPane active="true" b:id="containerCommandLineTab">
						  	<g:HTMLPanel>
								<pre>
									<code class="nohighlight">
										# Login<br/>
										synapse login<br/>
										<br/>
										# Download folder<br/>
										synapse get -r <span ui:field="id1"/><br/>
									</code>
								</pre>
							</g:HTMLPanel>
						</b:TabPane>
						<b:TabPane b:id="containerPythonTab">
							<g:HTMLPanel>
								<pre>
									<code class="nohighlight">import synapseclient<br/>import synapseutils<br/><br/>syn = synapseclient.Synapse()<br/>syn.login('synapse_username','password')<br/>files = synapseutils.syncFromSynapse(syn, '<span ui:field="id2"/>')<br/>
									</code>
								</pre>
						    </g:HTMLPanel>
						</b:TabPane>
					</b:TabContent>
				</b:TabPanel>
			</b:ModalBody>
			<b:ModalFooter>
			    <b:Button type="PRIMARY" text="OK" dataDismiss="MODAL"/>
			</b:ModalFooter>
		</b:Modal>
	</bh:Span>
</ui:UiBinder>