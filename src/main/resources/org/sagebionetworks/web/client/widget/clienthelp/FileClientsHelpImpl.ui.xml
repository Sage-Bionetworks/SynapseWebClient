<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">
	<bh:Span>
		<b:Anchor dataToggle="MODAL" dataTarget="#clientHelpModal" text="other download options" addStyleNames="font-italic"/>
		<b:Modal closable="true" dataBackdrop="STATIC" dataKeyboard="true" b:id="clientHelpModal">
			<b:ModalHeader>
			    <b:Heading size="H4" text="Download Options" addStyleNames="displayInline"/>
			    <w:HelpWidget helpMarkdown="Synapse is built on a number of RESTful web APIs that allow users to interact with the system via a number of clients. The [Synapse API documentation](http://docs.synapse.org/articles/api_documentation.html) is available online." 
								href="http://docs.synapse.org/articles/getting_started.html#installing-synapse-clients" addStyleNames="margin-left-5" placement="BOTTOM"/>
			</b:ModalHeader>
			<b:ModalBody>
				<b:TabPanel>
					<b:NavTabs>
						<b:TabListItem active="true" dataTarget="#commandLineTab" text="Command Line" />
						<b:TabListItem dataTarget="#pythonTab" text="Python" />
						<b:TabListItem dataTarget="#rTab" text="R" />
					</b:NavTabs>
					<b:TabContent>
						<b:TabPane active="true" b:id="commandLineTab">
						  	<g:HTMLPanel>
								<pre>
									<code class="nohighlight">
										# Login<br/>
										synapse -u synapse_username -p synapse_password<br/>
										<br/>
										# Download file<br/>
										synapse get <span ui:field="id1"/><br/>
									</code>
								</pre>
							</g:HTMLPanel>
						</b:TabPane>
						<b:TabPane b:id="pythonTab">
							<g:HTMLPanel>
								<pre>
									<code class="nohighlight">
										import synapseclient<br/>
										<br/>
										syn = synapseclient.Synapse()<br/>
										syn.login('synapse_username','password')<br/>
										<br/>
										# Obtain a pointer and download the data<br/>
										<span ui:field="id2"/> = syn.get('<span ui:field="id3"/>')<br/>
										<br/>
										# Get the path to the local copy of the data file<br/>
										filepath = <span ui:field="id4"/>.path<br/>
									</code>
								</pre>
						    </g:HTMLPanel>
						</b:TabPane>
						<b:TabPane b:id="rTab">
							<g:HTMLPanel>
								<pre>
									<code class="nohighlight">
										library(synapseClient)<br/>
										synapseLogin('username','password')<br/>
										<br/>
										# Obtain a pointer and download the data<br/>
										<span ui:field="id5"/> &#60;- synGet(id='<span ui:field="id6"/>')<br/>
										<br/>
										# Load the data<br/>
										<span ui:field="id7"/> &#60;- synGet(id='<span ui:field="id8"/>', load=T)<br/>
									</code>
								</pre>
							</g:HTMLPanel>
						</b:TabPane>
					</b:TabContent>
				</b:TabPanel>
			</b:ModalBody>
			<b:ModalFooter>
			    <b:Button type="PRIMARY" text="OK" dataDismiss="MODAL"/>
			</b:ModalFooter>
		</b:Modal>
	</bh:Span>
</ui:UiBinder>