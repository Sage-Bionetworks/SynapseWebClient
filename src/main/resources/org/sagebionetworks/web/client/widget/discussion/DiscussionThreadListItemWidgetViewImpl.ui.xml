<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<ui:with field='sageImageBundle'
		type='org.sagebionetworks.web.client.SageImageBundle' />
	<bh:Div addStyleNames="overflow-x-hidden">
		<bh:Div ui:field="refreshAlertContainer"></bh:Div>
		<bh:Div addStyleNames="padding-5 light-border-bottom">
			<t:Table width="100%">
				<t:TableRow>
					<t:TableData paddingRight="10">
						<b:Anchor ui:field="threadLink" iconFixedWidth="true"
							iconSize="LARGE"
							addStyleNames="lead margin-right-10 textDecorationNone" />
					</t:TableData>
					<t:TableData width="60px" addStyleNames="visible-lg">
						<bh:Span ui:field="threadAuthor"></bh:Span>
					</t:TableData>
					<t:TableData width="310px" addStyleNames="visible-lg">
						<bh:Span ui:field="activeUsers"
							addStyleNames="imageButton"></bh:Span>
					</t:TableData>
					<t:TableData width="90px"
						addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="numberOfReplies"></bh:Span>
					</t:TableData>
					<t:TableData width="90px"
						addStyleNames="visible-lg visible-md">
						<bh:Span ui:field="numberOfViews"></bh:Span>
					</t:TableData>
					<t:TableData width="80px" addStyleNames="hidden-xs">
						<bh:Span ui:field="lastActivity"></bh:Span>
					</t:TableData>
				</t:TableRow>
			</t:Table>
		</bh:Div>
	</bh:Div>
</ui:UiBinder>