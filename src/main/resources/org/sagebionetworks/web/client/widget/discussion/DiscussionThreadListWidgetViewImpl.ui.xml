<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:with field='sageImageBundle' type='org.sagebionetworks.web.client.SageImageBundle'/>
	<bh:Div>
		<bh:Div ui:field="threadCountAlertContainer"/>
		<b:Row>
			<b:Column size="XS_12" >
				<g:HTMLPanel ui:field="loadingUI" addStyleNames="center-block center margin-top-20">
					<g:Image styleName="displayInline" resource='{sageImageBundle.loading31}' />
					&nbsp;Loading...
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="XS_12" ui:field="threadListContainer" />
			
			<b:Column size="XS_12" addStyleNames="margin-top-10">
				<b:Button ui:field="loadMoreButton" pull="LEFT">Load more threads</b:Button>
			</b:Column>
		</b:Row>
	</bh:Div>
</ui:UiBinder>