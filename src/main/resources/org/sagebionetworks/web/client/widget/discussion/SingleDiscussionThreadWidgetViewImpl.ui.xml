<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<ui:with field='sageImageBundle' type='org.sagebionetworks.web.client.SageImageBundle'/>
	<bh:Div addStyleNames="overflow-x-hidden">
		<bh:Div ui:field="refreshAlertContainer"></bh:Div>
		<bh:Div ui:field="threadDetails" addStyleNames="overflow-x-hidden">
			<bh:Div addStyleNames="margin-top-10" width="100%" pull="RIGHT" >
				<bh:Div width="100%">
					<bh:Span ui:field="author"></bh:Span>
					<b:Label text="Moderator" ui:field="moderatorBadge" visible="false" addStyleNames="synapse-purple-bg moveup-10 margin-left-5"/>
				</bh:Div>
				<bh:Div width="100%">
					<g:HTMLPanel ui:field="loadingMessage" visible="false">
						<g:Image styleName="displayInline" resource='{sageImageBundle.loading16}' />
						&nbsp;Loading...
					</g:HTMLPanel>
					<b:Container fluid="true">
						<b:Row>
							<b:Column size="XS_12">
								<bh:Span ui:field="threadTitle" addStyleNames="lead margin-right-10 margin-left-10"/>
							</b:Column>
							<b:Column size="XS_12">
								<bh:Div ui:field="threadMessage"></bh:Div>
							</b:Column>
							<b:Column size="XS_12">
								<bh:Div addStyleNames="margin-left-10 small left">
									<bh:Span ui:field="createdOn"></bh:Span>
									<b:Label text="Edited" ui:field="edited" visible="false" addStyleNames="margin-left-10 moveup-1"/>
								</bh:Div>
								<bh:Div ui:field="commandsContainer">
									<bh:Span ui:field="subscribeButtonContainer" addStyleNames="right" />
									<b:Tooltip title="Delete thread" placement="LEFT">
										<b:Icon ui:field="deleteIcon" type="TRASH_O" size="LARGE" pull="RIGHT" addStyleNames="imageButton margin-right-10 line-height-1em" visible="false"/>
									</b:Tooltip>
									<b:Tooltip title="Edit thread" placement="LEFT">
										<b:Icon ui:field="editIcon" type="PENCIL" size="LARGE" pull="RIGHT" addStyleNames="imageButton margin-right-5 line-height-1em" visible="false"/>
									</b:Tooltip>
									<b:Tooltip title="Pin thread" placement="LEFT">
										<b:Icon ui:field="pinIcon" type="THUMB_TACK" size="LARGE" pull="RIGHT" addStyleNames="imageButton margin-right-5 line-height-1em" visible="false"/>
									</b:Tooltip>
									<b:Tooltip title="Unpin thread" placement="LEFT">
										<b:IconStack ui:field="unpinIconStack" addStyleNames="imageButton line-height-1em right moveup-5" visible="false">
											<b:Icon type="BAN" stackBase="true" addStyleNames="halfOpacity"/>
											<b:Icon type="THUMB_TACK" stackTop="true" ui:field="unpinIcon"/>
										</b:IconStack>
									</b:Tooltip>
								</bh:Div>
							</b:Column>
						</b:Row>
					</b:Container>
				</bh:Div>
			</bh:Div>
			<bh:Div addStyleNames="margin-top-10" width="98%" pull="RIGHT">
					<b:TextBox ui:field="replyTextBox" placeholder="Type your reply"/>
					<bh:Div ui:field="newReplyContainer" visible="false">
						<bh:Div ui:field="markdownEditorContainer"></bh:Div>
						<b:Button ui:field="cancelButton" type="DEFAULT">Cancel</b:Button>
						<b:Button ui:field="saveButton" type="PRIMARY" dataLoadingText="Saving...">Save</b:Button>
					</bh:Div>
			</bh:Div>
			<bh:Div ui:field="replyDetails">
				<bh:Div ui:field="replyListContainer" width="100%" pull="RIGHT" addStyleNames="margin-top-10"></bh:Div>
			</bh:Div>
			<bh:Div width="98%" pull="RIGHT" addStyleNames="margin-bottom-5">
				<g:HTMLPanel ui:field="loadMore" visible="false">
					<g:Image styleName="displayInline" resource='{sageImageBundle.loading16}' />
					&nbsp;Loading...
				</g:HTMLPanel>
			</bh:Div>
		</bh:Div>
		<g:SimplePanel ui:field="editThreadModalContainer"/>
		<bh:Div ui:field="synAlertContainer"></bh:Div>
	</bh:Div>
</ui:UiBinder>