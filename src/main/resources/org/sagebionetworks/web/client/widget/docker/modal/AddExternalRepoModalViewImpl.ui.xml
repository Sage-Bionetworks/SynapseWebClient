<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<b:Modal ui:field="addExternalRepoModal" closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="false" addStyleNames="modal">
		<b:ModalBody>
			<b:TextBox ui:field="registryHost" placeholder="Registry Host" addStyleNames="font-size-24 margin-bottom-10" height="50px" />
			<b:TextBox ui:field="repoPath" placeholder="Repository Path" addStyleNames="font-size-24 margin-bottom-10" height="50px" />
			<b:TextBox ui:field="digest" placeholder="Digest" addStyleNames="font-size-24 margin-bottom-10" height="50px" />
			<b:TextBox ui:field="tag" placeholder="Tag" addStyleNames="font-size-24 margin-bottom-10" height="50px" />

			<bh:Div ui:field="synAlertContainer"></bh:Div>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="cancelButton" type="DEFAULT">Cancel</b:Button>
			<b:Button ui:field="saveButton" type="PRIMARY" dataLoadingText="Saving...">Save</b:Button>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder> 