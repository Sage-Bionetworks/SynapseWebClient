<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
		xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
		xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
>
<bh:Span>
	    <bh:Span ui:field="synAlertContainer"/>
	    <bh:Span ui:field="doiLabel" addStyleNames="boldText margin-right-5" text="DOI: " visible="false"/>
		<g:TextBox ui:field="doi" width="190px" addStyleNames="border-none noBackground padding-0" readOnly="true" />
		<b:Icon ui:field="clipboardIcon" addStyleNames="margin-right-15" type="CLIPBOARD" title="Copy DOI To Clipboard"/>
	</bh:Span>
</ui:UiBinder>