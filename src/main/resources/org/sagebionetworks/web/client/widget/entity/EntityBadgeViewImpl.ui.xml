<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
  xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<t:Table width="100%" height="36px" addStyleNames="entityBadge">
		<t:TableRow>
			<t:TableData width="20px">
				<g:FocusPanel ui:field="iconContainer">
					<b:Icon ui:field="icon" type="FILE"/>
				</g:FocusPanel>
			</t:TableData>
			<t:TableData addStyleNames="overflow-x-hidden ">
				<bh:Div addStyleNames="margin-right-5" ui:field="nameContainer"> 
					<g:FlowPanel ui:field="entityContainer" addStyleNames="displayInline pull-left"/>
				</bh:Div>
			</t:TableData>
			<t:TableData width="310px" addStyleNames="visible-xl overflow-x-hidden">
				<g:SimplePanel ui:field="modifiedByField"/>
			</t:TableData>
			<t:TableData width="165px" addStyleNames="visible-md visible-lg overflow-x-hidden">
				<g:Label ui:field="modifiedOnField"/>
			</t:TableData>
			<t:TableData width="140px" addStyleNames="visible-lg overflow-x-hidden text-align-right">
				<g:Label ui:field="sizeField" addStyleNames="margin-right-30"/>
			</t:TableData>
			<t:TableData width="90px" addStyleNames="visible-lg overflow-x-hidden">
				<g:TextBox ui:field="md5Field" width="64px" addStyleNames="border-none noBackground font-size-14 overflow-x-hidden" readOnly="true" />
			</t:TableData>
			<t:TableData width="130px" addStyleNames="visible-md visible-lg overflow-x-hidden">
				<g:TextBox ui:field="idField" width="130px" addStyleNames="border-none noBackground font-size-14" readOnly="true" />
			</t:TableData>
			<t:TableData width="75px" addStyleNames="overflow-x-hidden text-align-center">
				<b:Anchor ui:field="addToDownloadListLink" addStyleNames="textDecorationNone" visible="false">
					<i class="fa syn-download moveright-5 movedown-1"></i>
					+
				</b:Anchor>
			</t:TableData>
			
		</t:TableRow>
	</t:Table>    
</ui:UiBinder>
