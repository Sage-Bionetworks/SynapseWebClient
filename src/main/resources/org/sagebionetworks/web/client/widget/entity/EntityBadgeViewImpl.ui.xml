<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2">
	<g:HTMLPanel styleName="entityBadge">
		<table cellspacing='0' cellpadding='0'>
			<tr>
				<td align="left" width="20px" style="vertical-align: top;">					
					<g:SimplePanel ui:field="iconContainer" />
				</td>
				<td>
			    	<g:FlowPanel ui:field="entityContainer" styleName="displayInline"/>
					<b:Popover content="..." placement="RIGHT" ui:field="popover" trigger="MANUAL" container="body">
							<g:Anchor ui:field="infoLink"><span class="glyphicon glyphicon-info-sign margin-left-5 greyText-imp"></span></g:Anchor>
					</b:Popover>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>    
</ui:UiBinder>
