<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:s="urn:import:org.sagebionetworks.web.client.widget">

  <ui:with field="icons" type="org.sagebionetworks.web.client.IconsImageBundle" />
 
	<g:HTMLPanel>
		<h2 style="margin-bottom: 0px;">	
			<g:HTMLPanel ui:field="entityNamePanel">			
				 <b:Icon ui:field="entityIcon" addStyleNames="lightGreyText" type="FILE" />&nbsp;<span ui:field="entityName"/>&nbsp;<g:SimplePanel ui:field="favoritePanel"/>			
			</g:HTMLPanel>
		</h2>
		<g:HTMLPanel ui:field="detailedMetadata">
		    <bh:Div>
		    	<bh:Span addStyleNames="boldText margin-right-5" text="Synapse ID:" />
		    	<g:TextBox ui:field="idField" width="85px" addStyleNames="border-none noBackground margin-right-15" readOnly="true" />
		    	<g:HTMLPanel ui:field="dataUseContainer" addStyleNames="displayInline"></g:HTMLPanel>
		    </bh:Div>
			<g:SimplePanel ui:field="doiPanel"/>
		    <b:Collapse ui:field="annotationsContent" toggle="false" b:id="annotationContentCollapse"  >
		    	<g:SimplePanel ui:field="annotationsContainer" styleName="highlight-box margin-bottom-15"></g:SimplePanel> 
		    </b:Collapse>
	    </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
