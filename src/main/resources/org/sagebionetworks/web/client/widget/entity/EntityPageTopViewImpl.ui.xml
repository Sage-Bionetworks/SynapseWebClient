<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget"
>
  <g:HTMLPanel>
    <!--Project level information -->
    <bh:Div addStyleNames="pageHeader min-height-48">
      <g:FlowPanel addStyleNames="projectMetadata" ui:field="projectUI">
        <bh:Span
          ui:field="projectActionMenuContainer"
          addStyleNames="right"
          paddingTop="20"
        />
        <bh:Div addStyleNames="projectTitle">
          <bh:Div ui:field="projectTitleBar" />
          <g:SimplePanel ui:field="projectMetadataContainer" />
        </bh:Div>
        <w:LoadingSpinner
          size="40px"
          ui:field="loadingUI"
          addStyleNames="center-block center"
        />
      </g:FlowPanel>
    </bh:Div>
    <bh:Div ui:field="tabsUI" />
  </g:HTMLPanel>
</ui:UiBinder>
