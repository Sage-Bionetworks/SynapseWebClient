<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget"
>
  <g:FlowPanel addStyleNames="markdownWidget min-height-48">
    <g:HTMLPanel
      ui:field="contentPanel"
      addStyleNames="margin-right-10 margin-left-10 markdown"
    />
    <g:SimplePanel ui:field="synAlertPanel" />
    <bh:Italic ui:field="emptyPanel" visible="false">
      There is no
			content. Please click Edit Wiki from the Tools menu.
    </bh:Italic>
    <w:LoadingSpinner
      ui:field="loading"
      size="31px"
      visible="false"
      addStyleNames="center-block margin-top-100"
    />
  </g:FlowPanel>
</ui:UiBinder>
