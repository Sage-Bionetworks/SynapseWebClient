<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2"
             xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
             xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

    <b:Modal ui:field="modal" title="Response" closable="true"
             dataBackdrop="STATIC" dataKeyboard="true">
        <b:ModalBody>
            <bh:Div>
                <b:FormGroup>
                    <b:CheckBox ui:field="optionOne"   text="Take and pass the Synapse Certification quiz. "/>
                    <b:CheckBox ui:field="optionTwo"   text="Add at least one piece of information (education, employment, etc.) to your ORCID profile and set it to â€œpublic. "/>
                    <b:CheckBox ui:field="optionThree" text="Physically initial each box, sign and date the Synapse Oath. "/>
                    <b:CheckBox ui:field="optionFour"  text="Submit an accepted form of identity attestation documentation (e.g., letter from a signing official). "/>
                    <b:CheckBox ui:field="optionFive"  text="custom text to insert"/>
                    <bh:Div>
                        <b:TextArea b:id="formName" ui:field="customText" visibleLines="5"/>
                    </bh:Div>
                </b:FormGroup>
            </bh:Div>
            <bh:Div>
                <b:FormGroup>
                    <b:Button ui:field="generateButton" type="PRIMARY" text="Generate Response"></b:Button>
                    <b:TextArea b:id="formName" ui:field="nameField" visibleLines="8"/>
                </b:FormGroup>
            </bh:Div>
            <b:Alert ui:field="alert" type="DANGER" visible="false"></b:Alert>
        </b:ModalBody>
        <b:ModalFooter>
            <b:Button ui:field="defaultButton" type="LINK" text="Cancel"></b:Button>
            <b:Button ui:field="primaryButton" type="PRIMARY" dataLoadingText="Saving..." text="Save"></b:Button>
        </b:ModalFooter>
    </b:Modal>
</ui:UiBinder>