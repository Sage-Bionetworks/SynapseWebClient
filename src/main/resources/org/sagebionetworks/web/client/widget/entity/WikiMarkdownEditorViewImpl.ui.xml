<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<bh:Div>
		<b:Modal ui:field="editorDialog"
			addStyleNames="modal-fullscreen" closable="true"
			dataBackdrop="STATIC" dataKeyboard="false">
			<b:ModalBody>
				<b:TextBox ui:field="titleField" placeholder="Title"
					addStyleNames="font-size-32 margin-bottom-10" height="50px" />
				<bh:Div ui:field="markdownEditorContainer" />
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button ui:field="deleteButton" pull="LEFT"
					addStyleNames="text-danger">Delete Page</b:Button>
				<b:Button ui:field="saveButton" type="PRIMARY"
					dataLoadingText="Saving..." pull="RIGHT">Save</b:Button>
				<b:Button ui:field="cancelButton" pull="RIGHT" type="LINK">Cancel</b:Button>
			</b:ModalFooter>
		</b:Modal>
	</bh:Div>
</ui:UiBinder>