<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
  	<ui:with field='sageImageBundle' type='org.sagebionetworks.web.client.SageImageBundle'/>

	<!-- Dialog for creating a new table -->
	<b:Modal ui:field="modal" title="Approve User Access" closable="true" dataBackdrop="STATIC" dataKeyboard="false">
		<b:ModalBody>
			<bh:Div addStyleNames="margin-top-10 margin-bottom-10">
				<b:Heading size="H5" text="Access Requirement" addStyleNames="margin-left-10 margin-right-10 margin-top-20" />
				<b:ButtonGroup>
					<b:Button ui:field="accessReqNum" dataToggle="DROPDOWN" text="Choose an access requirement..."/>
					<b:DropDownMenu ui:field="arDropdownMenu" />
				</b:ButtonGroup>
			</bh:Div>
			<bh:Div addStyleNames="margin-top-10 margin-bottom-10">
				<b:Heading size="H5" text="Access Requirement Text" addStyleNames="margin-left-10 margin-right-10 margin-top-20" />
				<bh:Div ui:field="accessReqText" width="100%" addStyleNames="read-only-box min-height-200">
				</bh:Div>
			</bh:Div>
			<bh:Div addStyleNames="margin-top-10 margin-bottom-10">
				<b:Heading size="H5" text="User" addStyleNames="margin-left-10 margin-right-10 margin-top-20" />
				<bh:Div ui:field="userSelectContainer" />
			</bh:Div>
			<bh:Div addStyleNames="margin-top-10 margin-bottom-10">
				<b:Heading size="H5" text="Email Template" addStyleNames="margin-left-10 margin-right-10 margin-top-20" />
				<g:HTMLPanel ui:field="loadingUI">
					<g:Image styleName="displayInline" resource='{sageImageBundle.loading16}' />
					&nbsp;Loading...
				</g:HTMLPanel>
				<bh:Div addStyleNames="margin-top-10 margin-bottom-10" height="30px">
					<bh:Div ui:field="emailTemplate" addStyleNames="read-only-box floatleft" width="100%" height="30px"/>
				</bh:Div>
			</bh:Div>
			<bh:Div ui:field="synAlertContainer" addStyleNames="margin-top-10" />
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="cancelButton" type="DEFAULT" text="Cancel" />
			<b:Button ui:field="submitButton" type="PRIMARY" dataLoadingText="Loading..." text="Approve" />
			<b:Button ui:field="sendEmail" type="WARNING" dataLoadingText="Sending..." text="Email" />
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>