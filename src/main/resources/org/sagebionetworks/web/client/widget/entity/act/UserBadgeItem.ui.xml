<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
>
  <ui:with
    field='icons'
    type='org.sagebionetworks.web.client.IconsImageBundle'
  />
  <bh:Div marginTop="5" addStyleNames="flexcontainer-row">
    <bh:Div addStyleNames="flexcontainer-column">
      <b:CheckBox ui:field="select" addStyleNames="inline-block" />
    </bh:Div>

    <bh:Div
      ui:field="userBadgeContainer"
      addStyleNames="flexcontainer-column flexcontainer-column-fill-width"
    />

    <bh:Div
      ui:field="renewRevokeContainer"
      addStyleNames="flexcontainer-column flexcontainer-align-items-flex-end"
    >
      <b:ButtonGroup ui:field="renewRevokeButtonGroup" />
    </bh:Div>
  </bh:Div>
</ui:UiBinder>
