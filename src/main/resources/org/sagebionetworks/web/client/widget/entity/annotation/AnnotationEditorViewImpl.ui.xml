<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<t:Table>
		<t:TableRow>
			<t:TableData
				addStyleNames="vertical-align-top min-width-200" paddingRight="2">
				<!-- Some inherited CSS causes form group to have margin-bottom of 15px, but to ensure that
				addNewAnnotationValueButton can be aligned properly, we must give it a margin of 0px-->
				<b:FormGroup ui:field="formGroup" addStyleNames="margin-bottom-0-imp">
					<b:TextBox ui:field="keyField" />
					<b:HelpBlock ui:field="helpBlock" />
				</b:FormGroup>
			</t:TableData>
			<t:TableData
				addStyleNames="vertical-align-top min-width-150" paddingRight="2">
				<g:ListBox ui:field="typeComboBox"
					styleName="form-control" />
			</t:TableData>
			<t:TableData
				addStyleNames="vertical-align-top min-width-200" paddingRight="2">
				<t:Table>
					<t:TableRow>
						<t:TableData><g:FlowPanel ui:field="editorsContainer" /></t:TableData>
						<t:TableData addStyleNames="vertical-align-bottom"><b:Button ui:field="addNewAnnotationValueButton" icon="PLUS"/></t:TableData>
					</t:TableRow>
				</t:Table>

			</t:TableData>
		</t:TableRow>
	</t:Table>
</ui:UiBinder>