<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">

	<g:HTMLPanel>
		<b:Modal ui:field="editModal"
			closable="true" dataBackdrop="STATIC" dataKeyboard="true"
			b:id="editAnnotationsModal">
			<b:ModalHeader>
				<b:Heading size="H4" addStyleNames="displayInline" text="Edit Annotations" />
				<w:HelpWidget
					helpMarkdown="Set metadata annotation fields. Field values are **not** case sensitive.)"
					href="https://docs.synapse.org/articles/annotation_and_query.html"
					addStyleNames="margin-left-5" placement="BOTTOM" />
			</b:ModalHeader>
			
			<b:ModalBody>
				<t:Table width="80%">
					<t:TableRow>
						<t:TableHeader addStyleNames="min-width-200">
							<b.html:Text>Key</b.html:Text>
						</t:TableHeader>
						<t:TableHeader addStyleNames="min-width-150">
							<b.html:Text>Type</b.html:Text>
						</t:TableHeader>
						<t:TableHeader addStyleNames="min-width-200">
							<b.html:Text>Value</b.html:Text>
						</t:TableHeader>
					</t:TableRow>
				</t:Table>
				<g:FlowPanel ui:field="editorsPanel" />
				<b:Button ui:field="addAnnotationButton" icon="PLUS"
					type="INFO">Add Annotation</b:Button>
				<b:Alert type="DANGER" ui:field="alert" visible="false"
					title="Error" addStyleNames="margin-top-10" />
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button ui:field="cancelButton" type="LINK"
					dataDismiss="MODAL">Cancel</b:Button>
				<b:Button ui:field="saveButton" type="PRIMARY"
					dataLoadingText="Saving...">Save</b:Button>
			</b:ModalFooter>
		</b:Modal>
	</g:HTMLPanel>

</ui:UiBinder>