<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
  <b:Modal
    ui:field="modal"
    title="Add Provenance URL"
    closable="true"
    dataBackdrop="STATIC"
    dataKeyboard="true"
    size="LARGE"
  >
    <b:ModalBody>
      <b:FormGroup>
        <b:FormLabel>URL</b:FormLabel>
        <b:TextBox
          ui:field="editURLField"
          addStyleNames="margin-left-10 margin-bottom-10 hide-resize"
        />
        <b:FormLabel for="editName">Name (Optional)</b:FormLabel>
        <b:TextBox
          ui:field="editNameField"
          addStyleNames="margin-left-10 margin-bottom-10 hide-resize"
        />
      </b:FormGroup>
      <g:SimplePanel ui:field="synAlertPanel" />
    </b:ModalBody>
    <b:ModalFooter>
      <b:Button text="Cancel" type="LINK" ui:field="cancelButton" />
      <b:Button ui:field="saveButton" text="Add" type="PRIMARY" />
    </b:ModalFooter>
  </b:Modal>
</ui:UiBinder>
