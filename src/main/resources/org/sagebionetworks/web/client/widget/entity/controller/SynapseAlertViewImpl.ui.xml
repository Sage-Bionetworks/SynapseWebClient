<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
  xmlns:w="urn:import:org.sagebionetworks.web.client.widget">

	<bh:Div>
		<bh:Div ui:field="loginWidgetContainer" >
			<w:FullWidthAlert
				message="You will need to sign in to access this resource."
				primaryCTAText="Sign In"
				primaryCTAHrefTargetSelf="/#!LoginPlace:0"
				alertType="INFO"
				global="false"
				/>
		</bh:Div>
		<b:Alert ui:field="alert" type="DANGER" addStyleNames="synapseAlert margin-top-10 margin-bottom-0-imp">
			<bh:Div addStyleNames="iconAndMessageArea">
				<b:IconStack addStyleNames="iconArea font-size-20">
					<b:Icon addStyleNames="iconBackground" type="CIRCLE" stackBase="true"/>
					<b:Icon ui:field="icon" addStyleNames="iconForeground" type="EXCLAMATION_CIRCLE" stackTop="true"/>
				</b:IconStack>
				<bh:Span addStyleNames="messageArea font-size-15" marginLeft="10">
					<bh:Strong ui:field="alertText" addStyleNames="displayBlock"/>
				</bh:Span>
			</bh:Div>
			<b:Button ui:field="reloadButton" addStyleNames="font-size-15 buttonArea"
				marginRight="10" text="Retry" visible="false" icon="REFRESH"/>
		</b:Alert>
		<bh:Div ui:field="jiraDialogContainer"/>
	</bh:Div>
</ui:UiBinder>