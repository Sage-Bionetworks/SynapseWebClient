<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:MUI="urn:import:org.sagebionetworks.web.client.jsinterop.mui"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
>
  <bh:Div>
    <MUI:Grid container="true" addStyleNames="margin-10">
      <MUI:Grid xs="6">
        <b:FormGroup>
          <b:FormLabel>Cytoscape JS network file</b:FormLabel>
          <b:InputGroup>
            <b:TextBox
              ui:field="cyJsEntity"
              autoComplete="false"
              enabled="false"
            />
            <b:InputGroupButton>
              <b:Button
                text="Find cyjs file"
                ui:field="findCyJSButton"
                icon="SEARCH"
                width="125px"
              />
            </b:InputGroupButton>
          </b:InputGroup>
        </b:FormGroup>
      </MUI:Grid>
      <MUI:Grid xs="6" />
    </MUI:Grid>
    <MUI:Grid container="true" addStyleNames="margin-10">
      <MUI:Grid xs="6">
        <b:FormGroup>
          <b:FormLabel>Cytoscape JS style file</b:FormLabel>
          <b:InputGroup>
            <b:TextBox
              ui:field="styleEntity"
              autoComplete="false"
              enabled="false"
            />
            <b:InputGroupButton>
              <b:Button
                text="Find json file"
                ui:field="findJSONStyleButton"
                icon="SEARCH"
                width="125px"
              />
            </b:InputGroupButton>
          </b:InputGroup>
        </b:FormGroup>
      </MUI:Grid>
      <MUI:Grid xs="6" />
    </MUI:Grid>
    <MUI:Grid container="true" addStyleNames="margin-10">
      <MUI:Grid xs="6">
        <b:FormGroup>
          <b:FormLabel>Display height (px)</b:FormLabel>
          <b:TextBox
            placeholder="500 (Default)"
            ui:field="displayHeightField"
          />
        </b:FormGroup>
      </MUI:Grid>
      <MUI:Grid xs="6" />
    </MUI:Grid>
  </bh:Div>
</ui:UiBinder>
