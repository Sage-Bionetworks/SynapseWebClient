<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">

	<bh:Div>
		<t:Table width="100%" ui:field="fhaTable">
			<t:TableRow ui:field="fhaTableHeader" addStyleNames="lightGreyBackground" height="45px" >
				<t:TableHeader addStyleNames="font-weight-normal" text="File Name" paddingLeft="5"/>
				<t:TableHeader addStyleNames="font-weight-normal" width="55px" text="Access"/>
				<t:TableHeader addStyleNames="font-weight-normal" width="190px" text="Created By"/>
				<t:TableHeader addStyleNames="font-weight-normal" width="150px" text="Created On"/>
				<t:TableHeader addStyleNames="font-weight-normal" width="100px" text="Size"/>
				<t:TableHeader width="50px" text=""/> <!-- delete item column -->
			</t:TableRow>
		</t:Table>
		<g:ScrollPanel addStyleNames="max-height-400">
			<t:Table width="100%" ui:field="fhaTableData" />
		</g:ScrollPanel>
		<bh:Div ui:field="accessRestrictionDetectedUI" visible="false" marginTop="20">
			<bh:Span addStyleNames="color-white synapse-yellow-bg label-as-badge left" paddingTop="10" paddingRight="15" paddingBottom="10" paddingLeft="10">
				<b:Icon type="MINUS_CIRCLE" />
				<bh:Text>Access Required</bh:Text>
			</bh:Span>
			<bh:Span>
				<bh:Italic marginLeft="10">Your list has restricted files that can't be downloaded.  You must first request access to these restricted files.</bh:Italic>
				<bh:Br />
				<bh:Italic marginLeft="10">All files will remain in the list and can be downloaded from here once your access is granted.</bh:Italic>
			</bh:Span>
		</bh:Div>
	</bh:Div>
</ui:UiBinder>
