<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<b:Container fluid="true" addStyleNames="border-bottom-1">
		<b:Row>
			<b:Column size="XS_12">
				<b:Heading size="H4">
					<bh:Text ui:field="evaluationNameText" />
					<b:Button ui:field="deleteButton" type="DANGER"
						icon="TIMES" pull="RIGHT" addStyleNames="margin-right-5"
						size="EXTRA_SMALL" height="22px" />
					<b:Button ui:field="shareButton" text="Share" pull="RIGHT"
						addStyleNames="margin-right-5" size="EXTRA_SMALL" />
					<b:Button ui:field="editButton" icon="EDIT" text="Edit"
						pull="RIGHT" addStyleNames="margin-right-5" size="EXTRA_SMALL" />
				</b:Heading>
				<bh:Div ui:field="submitToEvaluationContainer" />
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="XS_12" addStyleNames="margin-top-10">
				<b:FormGroup>
					<b:FormLabel text="Description"
						addStyleNames="displayInline margin-right-5" />
					<b:FormControlStatic
						ui:field="descriptionField" addStyleNames="displayInline" />
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel text="Created"
						addStyleNames="displayInline margin-right-5" />
					<b:FormControlStatic ui:field="createdOnDiv"
						addStyleNames="displayInline" />
					<bh:Strong text="by"
						addStyleNames="margin-left-5 margin-right-5" />
					<bh:Div ui:field="createdByDiv"
						addStyleNames="displayInline" />
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel text="Submission Instructions"
						addStyleNames="displayInline  margin-right-5" />
					<b:FormControlStatic
						ui:field="submissionInstructionsField"
						addStyleNames="displayInline" />
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel text="Submission Receipt Message"
						addStyleNames="displayInline margin-right-5" />
					<b:FormControlStatic
						ui:field="submissionReceiptField" addStyleNames="displayInline" />
				</b:FormGroup>
				<b:Panel addStyleNames="padding-10" ui:field="quotaUI">
					<b:PanelHeader>
						<b:Heading size="H4" text="Quota" />
					</b:PanelHeader>
					<b:PanelBody>
						<b:FormGroup>
							<b:FormLabel text="First Round Start Date/Time"
								addStyleNames="displayInline margin-right-5" />
							<b:FormControlStatic ui:field="roundStart"
								addStyleNames="displayInline" />
						</b:FormGroup>
						<b:FormGroup>
							<b:FormLabel text="Submission Limit"
								addStyleNames="displayInline margin-right-5" />
							<b:FormControlStatic
								ui:field="submissionLimitField" addStyleNames="displayInline" />
						</b:FormGroup>
						<b:FormGroup>
							<b:FormLabel text="Number of Rounds"
								addStyleNames="displayInline margin-right-5" />
							<b:FormControlStatic
								ui:field="numberOfRoundsField" addStyleNames="displayInline" />
						</b:FormGroup>
						<b:FormGroup>
							<b:FormLabel text="Round Duration (ms)"
								addStyleNames="displayInline margin-right-5" />
							<b:FormControlStatic
								ui:field="roundDurationField" addStyleNames="displayInline" />
						</b:FormGroup>
					</b:PanelBody>
				</b:Panel>
			</b:Column>
		</b:Row>

	</b:Container>
</ui:UiBinder>