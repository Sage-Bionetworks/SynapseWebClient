<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:with field='sageImages' type='org.sagebionetworks.web.client.SageImageBundle' />
	
	<bh:Div addStyleNames="header">
		<b:Row ui:field="headerDiv" addStyleNames="notopmargin synapse-blue-bg-gradient">
			<b:Column size="XS_12">
		        <bh:Div ui:field="headingPanel" addStyleNames="margin-left-15 inline-block" paddingTop="18">
		        	<g:Image ui:field="synapseLogo" url="images/logo.svg" 
		        	    addStyleNames="imageButton margin-bottom-15 margin-right-10 moveup-3" width="35px" height="35px"/>
		            <b:Heading size="H2" addStyleNames="displayInline color-white">
		            	<b:Anchor ui:field="projectHeadingAnchor" addStyleNames="color-white textDecorationNone"/>
		        		<g:SimplePanel ui:field="projectFavoritePanel" addStyleNames="displayInline favoriteIcon margin-left-10" visible="false"/>
		        	</b:Heading>
			  	</bh:Div>
			  	<bh:Span ui:field="headerButtons" addStyleNames="right">
			  		<b:DropDown addStyleNames="right padding-left-10 padding-right-10 padding-top-22">
						<b:Anchor dataToggle="DROPDOWN" icon="QUESTION_CIRCLE" iconSize="TIMES2" addStyleNames="color-white"/>
						<b:DropDownMenu ui:field="helpDropdownMenu" addStyleNames="dropdown-menu-right">
							<b:AnchorListItem ui:field="documentationLink" icon="EXTERNAL_LINK" iconFixedWidth="true" iconPosition="RIGHT" href="http://docs.synapse.org">Documentation</b:AnchorListItem>
							<b:AnchorListItem href="#!SynapseForum:default">Help Forum</b:AnchorListItem>
							<b:AnchorListItem addStyleNames="submit-feedback-command">Submit Feedback</b:AnchorListItem>
							<b:AnchorListItem ui:field="emailSynapseSupportLink" icon="ENVELOPE_O" href="mailto:synapseinfo@sagebionetworks.org" iconFixedWidth="true" iconPosition="RIGHT">Contact Us</b:AnchorListItem>
						</b:DropDownMenu>
					</b:DropDown>
			  	
			  		<g:SimplePanel ui:field="loginLinkUI" addStyleNames="right margin-left-10 margin-right-10 margin-top-22 padding-left-15" visible="false">
						<b:Button ui:field="loginLink" text="&nbsp;&nbsp;&nbsp;Sign in&nbsp;&nbsp;&nbsp;" type="PRIMARY" />
					</g:SimplePanel>
					<b:DropDown ui:field="dashboardDropdown" addStyleNames="right padding-left-10 padding-right-10 padding-top-22" visible="false" height="70px">
						<b:Anchor dataToggle="DROPDOWN" ui:field="dashboardDropdownAnchor" />
						<b:DropDownMenu addStyleNames="dropdown-menu-right">
							<b:AnchorListItem ui:field="myDashboardLink" iconFixedWidth="true" iconPosition="RIGHT">My Dashboard</b:AnchorListItem>
							<b:AnchorListItem ui:field="logoutLink" icon="SIGN_OUT" iconFixedWidth="true" iconPosition="RIGHT">Sign out</b:AnchorListItem>
						</b:DropDownMenu>
					</b:DropDown>
					<bh:Span addStyleNames="border-left-1 right margin-top-22" height="25px"/>
					<b:Tooltip placement="BOTTOM" title="Favorites">
						<b:DropDown ui:field="headerFavButtonGroup" pull="RIGHT" addStyleNames="padding-left-10 padding-right-15 padding-top-22" visible="false" height="70px">
							<b:Anchor ui:field="headerFavButton" dataToggle="DROPDOWN" icon="STAR" iconSize="TIMES2" height="28px" addStyleNames="color-white" />
							<b:DropDownMenu ui:field="headerFavList" addStyleNames="dropdown-menu-right">
							</b:DropDownMenu>
						</b:DropDown>
					</b:Tooltip>
				    <g:SimplePanel ui:field="searchBoxContainer" addStyleNames="right margin-left-10 margin-right-10 margin-top-22 margin-bottom-20"/>
				    <g:SimplePanel ui:field="stuAnnouncementsContainer" addStyleNames="right margin-left-10 "/>
				</bh:Span>
				<b:Alert ui:field="stagingAlert" type="WARNING" visible="false">
					<b:Heading size="H3" text="This website is for testing only." addStyleNames="color-white margin-right-10" />
					<b:Heading size="H4" text="Any data created will be deleted shortly.  To do your work please visit " addStyleNames="color-white displayInline margin-right-10" />
					<b:Anchor href="https://www.synapse.org" text="www.synapse.org" addStyleNames="font-size-20" />
				</b:Alert>
				<g:FlowPanel ui:field="testSitePanel" visible="false" addStyleNames="margin-left-10 margin-right-10 margin-top-5">
					<bh:Span addStyleNames="smallerText color-white">Alpha features&nbsp;</bh:Span>
					<bh:Span addStyleNames="smallerText color-white strong">on</bh:Span>
					<bh:Span addStyleNames="smallerText color-white">&nbsp;/&nbsp;</bh:Span>
					<b:Anchor addStyleNames="smallerText color-white" ui:field="goToStandardSite" text="off" />
					<b:Anchor ui:field="trashLink" icon="TRASH_O" addStyleNames="margin-left-20 smallerText color-white" text="Trash can" visible="false" />
				</g:FlowPanel>
			</b:Column>
		</b:Row>
	</bh:Div>
</ui:UiBinder>
