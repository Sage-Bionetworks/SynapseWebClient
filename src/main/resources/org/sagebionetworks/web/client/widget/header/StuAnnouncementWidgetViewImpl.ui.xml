<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<g:FocusPanel ui:field="panel" addStyleNames="imageButton displayInline">
		<g:FlowPanel addStyleNames="displayInline">
			<b:Image url="https://s3.amazonaws.com/static.synapse.org/stu/joy_icon.png" />
			<bh:Span addStyleNames="bubble bubble-right"><bh:Text ui:field="bubbleText"/></bh:Span>
		</g:FlowPanel>
	</g:FocusPanel>
</ui:UiBinder>
