<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<!-- Dialog for gathering user credentials -->
	<b:Modal addStyleNames="loginModal" closable="true"
		dataBackdrop="STATIC" dataKeyboard="true">
		<b:ModalBody>
			<bh:Text ui:field="instructions"></bh:Text>
			<b:Form ui:field="formPanel">
				<b:FieldSet>
					<b:FormGroup>
						<b:FormLabel for="formUsername">Username</b:FormLabel>
						<b:TextBox ui:field="usernameField" name="username"
							b:id="formName" />
					</b:FormGroup>
					<b:FormGroup>
						<b:FormLabel for="formPassword">Password</b:FormLabel>
						<b:Input ui:field="passwordField" name="password"
							type="PASSWORD" b:id="formPassword" />
					</b:FormGroup>
				</b:FieldSet>
			</b:Form>
			<b:Alert ui:field="alert" type="DANGER" visible="false"></b:Alert>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="primaryButton" type="PRIMARY"
				dataLoadingText="Processing...">Login</b:Button>
			<b:Button ui:field="defaultButton" type="LINK"
				dataDismiss="MODAL">Cancel</b:Button>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>