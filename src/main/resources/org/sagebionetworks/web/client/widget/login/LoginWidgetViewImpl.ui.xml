<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:d="urn:import:com.google.gwt.dom.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<bh:Div addStyleNames="max-width-350 center-in-div">
		<bh:ClearFix />
		<g:SimplePanel ui:field="googleSSOContainer">
			<b:Button ui:field="googleSignInButton" size="LARGE" width="100%" addStyleNames="lightGreyBackground no-background" text="" paddingTop="0" paddingBottom="0" paddingLeft="0"/>
		</g:SimplePanel>
		<bh:Div addStyleNames="centered-in-hr" marginTop="40" marginBottom="40">
			<bh:Span addStyleNames="lightGreyText">or</bh:Span>
		</bh:Div>
		<b:Heading size="H4" subText="Sign in with your Synapse account" addStyleNames="text-align-center margin-top-20"/>
		
		<bh:Div>
			<b:TextBox ui:field="username" placeholder="Username or Email Address" addStyleNames="margin-top-20 whiteBackground" autoComplete="false"/>
			<b:Input ui:field="password" type="PASSWORD"  placeholder="Password" addStyleNames="margin-top-20 whiteBackground" autoComplete="false"/>
			<b:Button ui:field="loginButton" size="LARGE" type="SUCCESS" text="Sign in" width="100%" marginTop="15"/>
		</bh:Div>
		<b:Row>
				<bh:Div ui:field="synAlertContainer" />
			</b:Row>
		<b:Heading size="H5" addStyleNames="margin-top-20">
			<b:Anchor text="Forgot password?" addStyleNames="synapse-green left" href="#!PasswordReset:0"/>
			<bh:Span  addStyleNames="right lightGreyText">It's free!</bh:Span>
			<b:Anchor text="Register" addStyleNames="synapse-green right margin-right-10" href="#!RegisterAccount:0"/>
		</b:Heading>
		<bh:ClearFix />
	</bh:Div>
</ui:UiBinder>