<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">
	<g:HTMLPanel>
		<b:Row>
			<b:Column size="MD_2 XS_12">
				<b:Row>
					<b:Column size="MD_3 SM_4 XS_12"
						addStyleNames="margin-bottom-10">
						<g:SimplePanel ui:field="imagePanel" />
					</b:Column>
					<g:SimplePanel ui:field="fileInputWidgetPanel" />
				</b:Row>
			</b:Column>
			<b:Column size="MD_8 XS_12">
				<b:Row>
					<b:Column size="SM_6">
						<b:FormGroup ui:field="usernameFormGroup">
							<b:FormLabel for="username">Username</b:FormLabel>
							<b:TextBox name="username" ui:field="username" />
							<b:HelpBlock ui:field="usernameHelpBlock" />
						</b:FormGroup>
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel for="firstName">First Name</b:FormLabel>
							<b:TextBox name="firstName" ui:field="firstName"
								placeholder="Enter first name" />
						</b:FormGroup>
					</b:Column>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel for="lastName">Last Name</b:FormLabel>
							<b:TextBox name="lastName" ui:field="lastName"
								placeholder="Enter last name" />
						</b:FormGroup>
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel for="currentPosition">Current position</b:FormLabel>
							<b:TextBox name="currentPosition"
								ui:field="currentPosition" placeholder="Enter current position" />
						</b:FormGroup>
					</b:Column>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel for="currentAffiliation">Current affiliation</b:FormLabel>
							<b:TextBox name="currentAffiliation"
								ui:field="currentAffiliation"
								placeholder="Enter current affiliation" />
						</b:FormGroup>
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="SM_12">
						<b:FormGroup>
							<b:FormLabel for="bio">Bio</b:FormLabel>
							<b:TextArea name="bio" ui:field="bio"
								placeholder="Enter bio" height="150px" />
						</b:FormGroup>
					</b:Column>
				</b:Row>		
				<b:Row>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel for="industry">Industry/Discipline</b:FormLabel>
							<b:TextBox name="industry" ui:field="industry"
								placeholder="Enter industry/discipline" />
						</b:FormGroup>
					</b:Column>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel for="location">City, Country</b:FormLabel>					
							<bh:Div ui:field="locationSuggestBoxContainer" />
						</b:FormGroup>
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="SM_6">
						<b:FormGroup ui:field="linkFormGroup">
							<b:FormLabel for="link">Website</b:FormLabel>
							<b:TextBox name="link" ui:field="link"
								placeholder="Enter link to more info" />
							<b:HelpBlock ui:field="linkHelpBlock" />
						</b:FormGroup>
					</b:Column>
				</b:Row>
				<bh:Div ui:field="synAlertContainer"/>
				<b:Button ui:field="editProfileButton" icon="EDIT" type="PRIMARY" visible="false">Edit Profile</b:Button>
				<b:Button ui:field="saveProfileButton" type="PRIMARY" visible="false">Save Changes</b:Button>			
			</b:Column>
			<b:Column size="MD_2 XS_12">
				<bh:Span>New badge goes here</bh:Span>
			</b:Column>
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder> 