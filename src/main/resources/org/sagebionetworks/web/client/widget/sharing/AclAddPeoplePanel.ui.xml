<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
   <!-- <g:HTMLPanel ui:field="mainContainer" addStyleNames="panel panel-default"> -->
        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="H3" text="Add People"/>
            </b:PanelHeader>
	        <b:PanelBody>
	            <!-- <b:Container> -->
	                <b:Column size="MD_12">
		                <b:Row>
		                    <b:Column size="MD_2">
		                        <b:FormLabel>Name:</b:FormLabel>
		                    </b:Column>
		                    <b:Column ui:field="suggestBoxPanel" size="MD_10" />
		                </b:Row>
		                <b:Row addStyleNames="margin-top-10">
		                    <b:Column size="MD_2">
		                        <b:FormLabel>Access Level:</b:FormLabel>
		                    </b:Column>
		                    <b:Column size="MD_10">
		                       <b:ButtonGroup addStyleNames="btn-block">
		                    	<b:Button ui:field="permDropDownButton" size="SMALL" dataToggle="DROPDOWN" addStyleNames="btn-block"/>
		                    	<b:DropDownMenu ui:field="permDropDownMenu" addStyleNames="btn-block"/>
		                    </b:ButtonGroup>
		                    </b:Column>
		                </b:Row>
		                <b:Row>
		                    
		                </b:Row>
		                <b:Row>
		                    <b:Column size = "MD_2">
		                        <b:Button ui:field="addPersonButton" size="EXTRA_SMALL">Add</b:Button>
		                    </b:Column>
		                </b:Row>
		        	</b:Column>
	            <!-- </b:Container> -->
	        </b:PanelBody>
	        <b:PanelFooter>
	            <b:Row>
	                <b:Column size="MD_1">
	                    <b:Button ui:field="makePublicButton" icon="GLOBE" size="EXTRA_SMALL">Make Public</b:Button>
	                </b:Column>
	                <b:Column size="MD_3" addStyleNames="pull-right">
	                    <b:Tooltip placement="BOTTOM" ui:field="notifyTooltip">
	                    	<b:CheckBox ui:field="notifyPeopleCheckBox" addStyleNames="margin-0-imp" >Notify people via email</b:CheckBox>
	                    </b:Tooltip>
	                </b:Column>
	            </b:Row>
	        </b:PanelFooter>
        </b:Panel>
    <!-- </g:HTMLPanel> -->
</ui:UiBinder>