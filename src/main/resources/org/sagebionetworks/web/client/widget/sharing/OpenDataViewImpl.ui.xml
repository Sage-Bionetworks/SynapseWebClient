<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">

	<bh:Div>
		<bh:Div ui:field="isPublicAndOpen" visible="false" marginTop="20">
			<bh:Paragraph marginBottom="0">
				<w:IconSvg icon="checkCircle" addStyleNames="synapse-green displayInline margin-right-5 moveup-3" />
				<bh:Strong>This data is open</bh:Strong>
			</bh:Paragraph>
			<bh:Paragraph addStyleNames="lightGreyText margin-left-30">
				Anyone can download it, even if they arenâ€™t logged in to Synapse.
			</bh:Paragraph>
		</bh:Div>
		<bh:Div ui:field="isPublicAndAdmin" visible="false" marginTop="20">
			<bh:Paragraph marginBottom="0" addStyleNames="has-warning">
				<w:IconSvg icon="warningOutlined" addStyleNames="form-control-feedback displayInline margin-right-5 moveup-3" />
				<bh:Strong>This data is not open. Users must be logged in to Synapse to download it.</bh:Strong>
			</bh:Paragraph>
		</bh:Div>
		<bh:Div ui:field="isPrivateAndOpenAndAdmin" visible="false" marginTop="20">
			<bh:Paragraph marginBottom="0" addStyleNames="has-warning">
				<w:IconSvg icon="warningOutlined" addStyleNames="form-control-feedback displayInline margin-right-5 moveup-3" />
