<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client">

  <ui:style>
    .cellTable {
      border-bottom: 1px solid #ccc;
      text-align: left;
      margin-bottom: 4px;
    }
  </ui:style>

  <g:HTMLPanel>
	<g:HTMLPanel ui:field="queryPanel" visible="false" styleName="margin-top-15">
		<div class="row">
			<div class="col-xs-8 col-sm-10 col-md-10">
				<g:TextBox ui:field="queryField" styleName="form-control" />
			</div>
			<g:SimplePanel ui:field="queryButtonContainer"
				styleName="col-xs-4 col-sm-2 col-md-2" />
		</div>
	</g:HTMLPanel>

    <table cellspacing='0' cellpadding='0' style='width:100%;'>
      <tr>
        <td
          valign='top'>
          <g:SimplePanel ui:field="tableContainer" />
<!--           <c:CellTable
            addStyleNames='{style.cellTable}'
            pageSize='15'
            ui:field='cellTable' />
 -->        </td>
      </tr>
      <tr>
        <td
          align='center'>
          <g:SimplePanel ui:field="pagerContainer" />
          <!-- <c:SimplePager location="CENTER" ui:field='pager' />  -->
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>