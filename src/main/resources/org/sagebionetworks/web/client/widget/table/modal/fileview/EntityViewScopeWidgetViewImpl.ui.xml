  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
  <g:HTMLPanel>
    <g:SimplePanel ui:field="viewScopeContainer" />
