<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">

	<g:HTMLPanel>
		<g:SimplePanel ui:field="viewScopeContainer" />
		<b:Button ui:field="editButton" icon="EDIT" addStyleNames="margin-top-10" visible="false" text="Edit Scope" type="INFO"/>
		
		<b:Modal ui:field="editModal" title="Edit Columns" closable="true"
			fade="true" dataBackdrop="STATIC" dataKeyboard="false" b:id="editScopeModal"
			size="LARGE">
			<b:ModalBody>
				<g:SimplePanel ui:field="editScopeContainer"/>
				<g:SimplePanel ui:field="editScopeAlertContainer" />
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button ui:field="saveButton" type="PRIMARY"
					dataLoadingText="Saving...">Save</b:Button>
				<b:Button ui:field="cancelButton" type="DEFAULT"
					dataDismiss="MODAL">Cancel</b:Button>
			</b:ModalFooter>
		</b:Modal>
	</g:HTMLPanel>
</ui:UiBinder>