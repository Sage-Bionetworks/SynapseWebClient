<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">
	<bh:Div>
		<b:Form>
			<b:FormGroup>
				<b:FormLabel for="tableName">Table Name</b:FormLabel>
				<b:TextBox name="tableName" ui:field="tableName" />
			</b:FormGroup>
			<b:FormGroup>
				<b:FormLabel for="table">Table Schema</b:FormLabel>
				<t:Table ui:field="table"
					styleName="table table-striped table-condensed">
					<t:THead>
						<t:TableRow>
							<t:TableHeader>
							</t:TableHeader>
							<t:TableHeader>
								<bh:Strong>Column Name</bh:Strong>
							</t:TableHeader>
							<t:TableHeader>
								<bh:Strong>Column Type</bh:Strong>
							</t:TableHeader>
							<t:TableHeader>
								<bh:Strong>Size</bh:Strong>
							</t:TableHeader>
							<t:TableHeader>
								<bh:Strong>Default Value</bh:Strong>
							</t:TableHeader>
							<t:TableHeader>
								<bh:Strong>Restrict Values</bh:Strong>
							</t:TableHeader>
						</t:TableRow>
					</t:THead>
					<t:TBody ui:field="tableBody"></t:TBody>
				</t:Table>
			</b:FormGroup>
		</b:Form>
		<g:SimplePanel ui:field="trackerPanel" />
	</bh:Div>
</ui:UiBinder>