<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:bt="urn:import:org.sagebionetworks.web.client.view.bootstrap.table"
  xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
>
  <bt:TableHeader addStyleNames="whitespace-nowrap position-relative">
    <bh:Strong ui:field="header" paddingRight="30" />
    <b:Icon
      ui:field="sortIcon"
      type="SORT_AMOUNT_ASC"
      paddingTop="4"
      paddingRight="3"
      paddingBottom="4"
      paddingLeft="1"
      addStyleNames="imageButton tableHeaderSortIcon"
    />
    <bt:TableHeaderResizeGrip ui:field="resizeGrip" visible="false" />
  </bt:TableHeader>
</ui:UiBinder>
