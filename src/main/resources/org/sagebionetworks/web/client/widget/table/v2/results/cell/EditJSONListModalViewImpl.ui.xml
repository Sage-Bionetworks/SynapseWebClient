<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table">

    <g:HTMLPanel>
        <b:Modal ui:field="editModal" title="Edit Values"
                 size="SMALL"
                 closable="false" dataBackdrop="STATIC" dataKeyboard="true">
            <b:ModalBody>
                <t:Table width="80%">
                    <t:TableRow>
                        <t:TableHeader addStyleNames="min-width-200">
                            <b.html:Text>Value</b.html:Text>
                        </t:TableHeader>
                    </t:TableRow>

                    <t:TableRow>
                        <t:TableData>
                            <t:Table>
                                <t:TableRow>
                                    <t:TableData><g:FlowPanel ui:field="editorsPanel" /></t:TableData>
                                    <t:TableData addStyleNames="vertical-align-bottom"><b:Button ui:field="addNewValueButton" icon="PLUS"/></t:TableData>
                                </t:TableRow>
                            </t:Table>

                        </t:TableData>
                    </t:TableRow>
                </t:Table>

                <b:Button ui:field="pasteNewValuesButton"
                          type="INFO">Paste New Values</b:Button>
                <g:FlowPanel ui:field="pasteNewValuesPanel" />
                <b:Alert type="DANGER" ui:field="alert" visible="false"
                         title="Error" addStyleNames="margin-top-10" />
            </b:ModalBody>
            <b:ModalFooter>
                <b:Button ui:field="cancelButton" type="LINK">Cancel</b:Button>
                <b:Button ui:field="saveButton" type="PRIMARY"
                          dataLoadingText="Saving...">Save</b:Button>
            </b:ModalFooter>
        </b:Modal>
    </g:HTMLPanel>

</ui:UiBinder>