<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table"
             xmlns:sec="urn:import:org.sagebionetworks.web.client.widget.entity.controller">

    <g:HTMLPanel>
        <b:Modal ui:field="editModal" title="Edit Values"
                 closable="false" dataBackdrop="STATIC" dataKeyboard="true">
            <b:ModalBody>
                <t:Table>
                    <t:TableRow>
                        <t:TableHeader addStyleNames="min-width-200">
                            <b.html:Text>Value</b.html:Text>
                        </t:TableHeader>
                    </t:TableRow>
                </t:Table>
                <b.html:Div addStyleNames="max-height-65-vh scroll-y">
                    <t:Table ui:field="editorsPanel" addStyleNames="multi-value-editor-spaced" width="100%"/>
                </b.html:Div>

                <b:Button ui:field="pasteNewValuesButton" marginLeft="-12"
                          type="LINK" addStyleNames="boldText">PASTE NEW VALUES</b:Button>
                <g:FlowPanel ui:field="pasteNewValuesPanel" />
                <sec:SynapseAlertViewImpl ui:field="alert" />
            </b:ModalBody>
            <b:ModalFooter>
                <b:Button ui:field="cancelButton" type="LINK" addStyleNames="boldText" >CANCEL</b:Button>
                <b:Button ui:field="saveButton" type="PRIMARY" addStyleNames="boldText"
                          dataLoadingText="Saving...">OK</b:Button>
            </b:ModalFooter>
        </b:Modal>
    </g:HTMLPanel>

</ui:UiBinder>