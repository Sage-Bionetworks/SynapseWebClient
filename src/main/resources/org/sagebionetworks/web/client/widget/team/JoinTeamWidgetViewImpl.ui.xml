<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:s="urn:import:org.sagebionetworks.web.client.widget.modal">
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="userPanel" visible="false">
			<s:Dialog ui:field="joinWizard"
				addStyleNames="modal-fullscreen">
				<g:SimplePanel ui:field="progressWidgetPanel" />
				<g:SimplePanel ui:field="currentWizardContentPanel" />
				<g:HTML ui:field="accessRequirementHTML" />
				<b:Button type="INFO" text="How to request access..."
					addStyleNames="margin-top-10" size="LARGE"
					ui:field="actRequestAccessButton" />
			</s:Dialog>
			<b:Button type="PRIMARY" size="LARGE"
				ui:field="acceptInviteButton" text="Join" />
			<b:Button type="PRIMARY" size="LARGE"
				ui:field="simpleRequestButton" visible="false" text="Join" />
			<bh:Span addStyleNames="alert alert-info inline-block"
				ui:field="requestOpenMessageSpan"
				text="Your request to join this team has been sent." />

			<!-- For non-simple requests where the user can send a request message. -->
			<b:Button text="Request to Join Team" icon="PLUS"
				ui:field="requestButton" visible="false" dataToggle="COLLAPSE"
				size="LARGE" />
			<b:Collapse
				addStyleNames="margin-top-5 highlight-box highlight-line-min"
				ui:field="requestUIPanel" toggle="false">
				<b:TextArea width="500px"
					placeholder="Enter message... (optional)" ui:field="messageArea" />
				<b:Button text="Send request" addStyleNames="margin-top-10"
					ui:field="sendRequestButton" />
			</b:Collapse>
			<bh:Span addStyleNames="alert alert-success inline-block"
				ui:field="isMemberMessageSpan" text="Already a member" />
		</g:HTMLPanel>
		<b:Button type="PRIMARY" size="LARGE"
			ui:field="anonUserButton" visible="false" text="Join" />
		<bh:Div ui:field="synAlertContainer" />
	</g:HTMLPanel>
</ui:UiBinder>