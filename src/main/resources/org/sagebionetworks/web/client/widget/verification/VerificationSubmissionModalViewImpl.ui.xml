<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:t="urn:import:org.sagebionetworks.web.client.view.bootstrap.table"
	xmlns:w="urn:import:org.sagebionetworks.web.client.widget">
	<b:Modal ui:field="dialog" closable="true"
		dataBackdrop="STATIC" dataKeyboard="true"
		addStyleNames="modal-fullscreen">
		<b:ModalHeader>
			<b:Heading size="H4" ui:field="modalTitle"
				addStyleNames="displayInline" />
			<w:HelpWidget
				helpMarkdown="Certified Users can apply to have their user profile validated. A Synapse user with a Validated Profile is eligible to request access to Bridge data (data collected in research studies conducted via self-guided mobile applications.)"
				href="http://docs.synapse.org/articles/accounts_certified_users_and_profile_validation.html#validated-profile"
				addStyleNames="margin-left-5" placement="BOTTOM" />
		</b:ModalHeader>

		<b:ModalBody>
			<b:Alert ui:field="reasonAlert" type="DANGER"
				addStyleNames="margin-bottom-10 margin-top-10">
				<b:Heading size="H4"
					text="Why was my validated user application rejected?" />
				<bh:Paragraph ui:field="reasonAlertText" />
			</b:Alert>
			<bh:Div ui:field="publicallyVisible"
				addStyleNames="bg-primary padding-10 rounded">
				<b:Heading size="H4"
					text="Publicly visible profile information"
					addStyleNames="color-white" />
				<b:Row>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel>First name</b:FormLabel>
							<bh:Div addStyleNames="whiteBackground rounded">
								<b:TextBox ui:field="firstName"
									addStyleNames="blackText-imp" enabled="false" />
							</bh:Div>
						</b:FormGroup>
					</b:Column>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel>Last name</b:FormLabel>
							<bh:Div addStyleNames="whiteBackground rounded">
								<b:TextBox ui:field="lastName"
									addStyleNames="blackText-imp" enabled="false" />
							</bh:Div>
						</b:FormGroup>
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel>Affiliation</b:FormLabel>
							<bh:Div addStyleNames="whiteBackground rounded">
								<b:TextBox ui:field="currentAffiliation"
									addStyleNames="blackText-imp" enabled="false" />
							</bh:Div>
						</b:FormGroup>
					</b:Column>
					<b:Column size="SM_6">
						<b:FormGroup>
							<b:FormLabel>Location</b:FormLabel>
							<bh:Div addStyleNames="whiteBackground rounded">
								<b:TextBox ui:field="location"
									addStyleNames="blackText-imp" enabled="false" />
							</bh:Div>
						</b:FormGroup>
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="SM_12">
						<b:FormGroup>
							<b:FormLabel>ORCID</b:FormLabel>
							<bh:Div>
								<b:Anchor ui:field="orcIdAnchor"
									addStyleNames="color-white" target="_blank" />
							</bh:Div>
						</b:FormGroup>
					</b:Column>
				</b:Row>
			</bh:Div>
			<bh:Div ui:field="actOnly"
				addStyleNames="bg-warning padding-10 rounded margin-top-10">
				<b:Heading size="H4"
					text="Visible to the Sage Bionetworks Access and Compliance Team only" />
				<b:Row>
					<b:Column size="SM_12">
						<b:FormGroup>
							<b:FormLabel>Email</b:FormLabel>
							<bh:Div ui:field="emailAddresses" />
						</b:FormGroup>
					</b:Column>
				</b:Row>
				<b:FormGroup>
					<b:FormLabel>Upload your signed and initialed oath AND your
						documentation (e.g. a letter from a signing official at your
						institution using your institution's letterhead) below</b:FormLabel>
					<b:Panel ui:field="filesContainer"
						addStyleNames="padding-10" />
				</b:FormGroup>
			</bh:Div>
			<bh:Div ui:field="synAlertContainer"
				addStyleNames="margin-top-10" />
			<bh:Div ui:field="promptModalContainer" />
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="cancelButton" type="LINK">Cancel</b:Button>
			<b:Button ui:field="closeButton" dataDismiss="MODAL">Close</b:Button>
			<b:Button ui:field="submitButton" type="PRIMARY">Submit</b:Button>
			<b:Button ui:field="okButton" type="PRIMARY"
				dataDismiss="MODAL">OK</b:Button>
			<b:Button ui:field="recreateSubmissionButton" type="PRIMARY">Resubmit</b:Button>
			<b:Button ui:field="approveButton" type="SUCCESS">Approve</b:Button>
			<b:Button ui:field="rejectButton" type="DANGER">Reject</b:Button>
			<b:Button ui:field="suspendButton" type="DANGER">Suspend</b:Button>
			<b:Button ui:field="deleteButton" type="DANGER">Delete</b:Button>
		</b:ModalFooter>
	</b:Modal>


</ui:UiBinder>