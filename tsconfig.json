{
  "files": [".eslintrc.js"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "noEmit": true,
    "strict": true,
    "composite": false,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["e2e/**.ts", "e2e/**/**.ts"]
}
